.---------------------------------------------------------------------------
.   System    :   Accounts Payable System            
.   Include   :   APSORDKY
.   Routine   :   HAPODA00 Item                
.   Return    :           
.-------------------------------------------------------------------------------
HAPODA00
          MOVE      ZERO,CSCRSIZ
          IF        HTOP<3
            MOVE      "10",HTOP
            MOVE      "24",HBOT
            MOVE      "40",HLEF
            MOVE      "80",HRIG
          ENDIF
HAPODA04
          CALL      GSCRN000
          BRANCH    EXIT,HAPODA99
          MOVE      STDCOL00,STDCOL01
          ADD       " 5",STDCOL01
          DISPLAY   *PSTDCOL01:STDROW,*V2LON,*ULON,"Item"               
.
          MOVE      STDCOL01,STDCOL02
          ADD       " 7",STDCOL02
          DISPLAY   *PSTDCOL02:STDROW,*V2LON,*ULON,"Description"        
.
          MOVE      STDCOL02,STDCOL03
          ADD       "35",STDCOL03
HAPODA08
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          MOVE      SP70,APODCAT 
          PACK      KEY14,APODISC,APODORD,APODCAT,SP70                          
          PACK      SAVKEY80,APODISC,APODORD,APODCAT,SP70                       
          SETLPTR   SAVKEY80,8                                                  
          CALL      RSAPOD1 
HAPODA10
          CALL      RKAPOD1 
          BRANCH    OVRCD,HAPODA15
          PACK      KEY14,APODISC,APODORD,APODCAT,SP70                          
          MATCH     SAVKEY80,KEY14                                              
          GOTO      HAPODA15 IF NOT EQUAL                                       
          BRANCH    CSEARCH,HAPODA12
          CALL      HAPODA60
          BRANCH    OVRCD,HAPODA10
HAPODA12
          ADD       ONE,XITEMNO
          ADD       ONE,STDROW
          STORE     KEY14,XITEMNO,ST1,ST2,ST3,ST4,ST5:                           
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          DISPLAY   *PSTDCOL00:STDROW,SP1,*V2LON,XITEMNO,DOT
          DISPLAY   *PSTDCOL01:STDROW,APODCAT 
          DISPLAY   *PSTDCOL02:STDROW,APODDES 
          COMPARE   MAXITEM,XITEMNO
          GOTO      HAPODA10 IF NOT EQUAL
HAPODA15
          UNPACK    SAVKEY80,APODISC,APODORD,APODCAT                            
          MOVE      ONE,DITEM
          MOVE      MINITEM,DROW
          ADD       ONE,DROW
          DISPLAY   *PSTDCOL00:DROW,*V2LON,*HON,SP1,DITEM,DOT
          CLIP
          FLUSH     HLEF,HTOP,HRIG,HBOT
.
HAPODA20
          CALL      HSCRI000
          BRANCH    EXIT,HAPODA30,HAPODA35,HAPODA40,HAPODA45,HAPODA04:
                              HAPODA91,HAPODA50
          GOTO      HAPODA92
HAPODA30
          CALL      RKAPOD1 
          BRANCH    OVRCD,HAPODA85
          PACK      KEY14,APODISC,APODORD,APODCAT,SP70                          
          MATCH     SAVKEY80,KEY14                                              
          GOTO      HAPODA85 IF NOT EQUAL                                       
          CALL      RPAPOD1 
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HAPODA10
HAPODA35
          MOVE      ST1,KEY14
          CALL      RDAPOD1 
          CALL      RPAPOD1 
          BRANCH    OVRCD,HAPODA85
          PACK      KEY14,APODISC,APODORD,APODCAT,SP70                          
          MATCH     SAVKEY80,KEY14                                              
          GOTO      HAPODA85 IF NOT EQUAL                                       
          MATCH     SP70,APODCAT                                                
          GOTO      HAPODA85 IF EQUAL                                           
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          MOVE      MINITEM,STDROW
          MOVE      MAXITEM,XITEMNO
HAPODA36
          CALL      RPAPOD1 
          BRANCH    OVRCD,HAPODA37
          PACK      KEY14,APODISC,APODORD,APODCAT,SP70                          
          MATCH     SAVKEY80,KEY14                                              
          GOTO      HAPODA37 IF NOT EQUAL                                       
          SUB       ONE,XITEMNO
          COMPARE   ZERO,XITEMNO
          GOTO      HAPODA36 IF NOT EQUAL
HAPODA37
          MOVE      ZERO,XITEMNO
          GOTO      HAPODA10
HAPODA40
          MOVE      ST1,KEY14
          CALL      RDAPOD1 
          CALL      RPAPOD1 
          BRANCH    OVRCD,HAPODA85
          PACK      KEY14,APODISC,APODORD,APODCAT,SP70                          
          MATCH     SAVKEY80,KEY14                                              
          GOTO      HAPODA85 IF NOT EQUAL                                       
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HAPODA08
HAPODA45
          CALL      RKAPOD1 
          BRANCH    OVRCD,HAPODA85
          PACK      KEY14,APODISC,APODORD,APODCAT,SP70                          
          MATCH     SAVKEY80,KEY14                                              
          GOTO      HAPODA85 IF NOT EQUAL                                       
          SUSPEND
          CLIP      1,1,CRIG,24
.
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          MOVE      ZERO,XITEMNO
          PACK      KEY14,SAVKEY80,Z70                                          
          MOVE      MINITEM,STDROW
          MOVE      MAXITEM,XITEMNO
          CALL      RSAPOD1 
HAPODA46
          CALL      RPAPOD1 
          BRANCH    OVRCD,HAPODA47
          PACK      KEY14,APODISC,APODORD,APODCAT,SP70                          
          MATCH     SAVKEY80,KEY14                                              
          GOTO      HAPODA47 IF NOT EQUAL                                       
          SUB       ONE,XITEMNO
          COMPARE   ZERO,XITEMNO
          GOTO      HAPODA46 IF NOT EQUAL
HAPODA47
          MOVE      ZERO,XITEMNO
          GOTO      HAPODA10
HAPODA50  COMPARE   ZERO,CSEARCH
          GOTO      HAPODA55 IF EQUAL
          MOVE      ZERO,CSEARCH
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          ADD       ONE,STDROW
          UNPACK    SP70,SCHFLD01,SCHFLD02,SCHFLD03,SCHFLD04,SCHFLD05
          UNPACK    SP70,SCHFLD06,SCHFLD07,SCHFLD08,SCHFLD09,SCHFLD10
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          DISPLAY   *PSTDCOL00:STDROW,*V2LON,*HON,"Sch"
          KEYIN     *PSTDCOL01:STDROW,*V2LON,SCHFLD01
          RESET     SCHFLD01
          KEYIN     *PSTDCOL02:STDROW,*V2LON,SCHFLD02
          RESET     SCHFLD02
          PACK      KEY8,SP70
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HAPODA08
HAPODA55  MOVE      ONE,CSEARCH
          PACK      KEY8,SP70
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HAPODA08
HAPODA60  MOVE      ZERO,OVRCD
          MATCH     SP70,SCHFLD01
          GOTO      HAPODA61 IF EQUAL
          MATCH     SCHFLD01,APODCAT 
          GOTO      HAPODA72 IF NOT EQUAL
HAPODA61
          MATCH     SP70,SCHFLD02
          GOTO      HAPODA62 IF EQUAL
          MATCH     SCHFLD02,APODDES 
          GOTO      HAPODA72 IF NOT EQUAL
HAPODA62
HAPODA63
HAPODA64
HAPODA65
HAPODA66
HAPODA67
HAPODA68
HAPODA69
HAPODA70
          GOTO      HAPODA75
HAPODA72  MOVE      ONE,OVRCD
HAPODA75  RETURN
HAPODA85
          LOAD      KEY14,XITEMNO,ST1,ST2,ST3,ST4,ST5:                           
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          UNPACK    KEY14,APODISC,APODORD,APODCAT                               
          CALL      RDAPOD1 
HAPODA90
          UNPACK    SAVKEY80,APODISC,APODORD,APODCAT                            
          BEEP
          GOTO      HAPODA20
HAPODA91
          MOVE      SP70,APODLED 
          MOVE      SP70,APODACC 
          MOVE      SP70,APODDIS 
          MOVE      SP70,APODRES 
          MOVE      SP70,APODDES 
          MOVE      ZERO,APODAMT 
          MOVE      ZERO,APODUCT 
          MOVE      ZERO,APODQTY 
          MOVE      SP70,APODSPA 
          MOVE      SP70,KEY14
          MOVE      SP70,APODCAT 
          GOTO      HAPODA96
HAPODA92
          MOVE      SP70,KEY14
          MOVE      SP70,APODCAT 
          LOAD      KEY14,CCITEM,ST1,ST2,ST3,ST4,ST5:                           
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          UNPACK    KEY14,APODISC,APODORD,APODCAT                               
HAPODA96
          PUTSCR    CSSCRNUM,HLEF,HTOP,HRIG,HBOT
          CALL      FRESCR00
          MOVE      ZERO,HTOP
          MOVE      ZERO,HLEF
          MOVE      ZERO,HBOT
          MOVE      ZERO,HRIG
HAPODA99
          RETURN
.---------------------------------------------------------------------------
.   System    :   Accounts Payable System            
.   Include   :   APSORDKY
.   Routine   :   KAPODA00 Keyin Item                
.   Parameter :   CKEYTYP 0 = Keyin , 1 = Accept, 2 = Either
.   Return    :   EXIT = 1 null entry, 2 EXITCHAR entered
.-------------------------------------------------------------------------------
KAPODA00 TOPIC     "APODCAT "
          MOVE      UNDLN70,APODCAT 
          KEYIN     *PCCOL:CVERT,*DV,APODCAT:                                   
                    *PCCOL:CVERT,*V2LON,*JR,APODCAT:                            
                    *PCCOL:CVERT,*DV,APODCAT 
.
          ENDSET    APODCAT 
          APPEND    SP70,APODCAT 
          RESET     APODCAT 
.
          MATCH     SP70,APODCAT 
          GOTO      KAPODA90 IF EQUAL
.
          ENDSET    APODCAT 
          CMATCH    EXITCHAR,APODCAT 
          GOTO      KAPODA95 IF EQUAL
.
          CMATCH    QUEST,APODCAT 
          GOTO      KAPODA10 IF NOT EQUAL
.
          MOVE      CCITEM,SCCITEM
          CALL      HAPODA00
          MOVE      SCCITEM,CCITEM
.
          ENDSET    APODCAT 
          APPEND    SP70,APODCAT 
          RESET     APODCAT 
.
          MATCH     SP70,APODCAT 
          GOTO      KAPODA00 IF EQUAL
.
          DISPLAY   *PCCOL:CVERT,*V2LON,APODCAT                                 
KAPODA10
          RESET     APODCAT 
          PACK      KEY14,APODISC,APODORD,APODCAT                               
          CALL      RAAPOD1 
          BRANCH    OVRCD,KAPODA80
          BRANCH    CKEYTYP,KAPODA75
          CALL      RDAPOD1 
KAPODA70
          MOVE      ZERO,EXIT
          GOTO      KAPODA99
KAPODA75
          MOVE      "Item Already Exist - ",DISPMSG                                                  
          CALL      MESSAGE1
          GOTO      KAPODA00
KAPODA80
          MOVE      ZERO,EXIT
          BRANCH    CKEYTYP,KAPODA99,KAPODA99
          MOVE      "Item Does Not Exist - ",DISPMSG                                                 
          CALL      MESSAGE1
          GOTO      KAPODA00
KAPODA90
          MOVE      ONE,EXIT
          GOTO      KAPODA99
KAPODA95
          MOVE      TWO,EXIT
KAPODA99 TOPIC    PRGID
          RETURN
