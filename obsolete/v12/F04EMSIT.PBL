+
.*****************************************************************************
.*        I/O Routines                                                       *
.*****************************************************************************
.
READSOLD  RESET     KEY3
          READ      EMRSITA1,KEY3;;
          RETURN
.
READKOLD  MOVE      ZERO,OVRCD
          READKS    OLDFILE1;EMSTSCOD,EMSTDESC,EMSTHRPW,EMSTDPTY,EMSTSPCO:      
                    EMSTSPNO,EMSTHSNO,EMSTDLOC,EMSTDRLC,EMSTDRES,OLDSPARE
          PACK      EMSTSPAR,OLDSPARE,SP70,SP70
          GOTO      OVERCOND IF OVER
          RETURN
.
WREMSIT1  RESET     KEY3                                                        
          WRITE     EMRSITA1,KEY3;EMSTSCOD,EMSTDESC,EMSTHRPW,EMSTDPTY,EMSTSPCO: 
                        EMSTSPNO,EMSTHSNO,EMSTDLOC,EMSTDRLC,EMSTDRES,EMSTEDST:
                        EMSTEDFP,EMSTSPAR                              
          RETURN
.
.
          INC       STD001IO
