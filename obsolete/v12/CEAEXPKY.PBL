.---------------------------------------------------------------------------
.   System    :   Theatre System                     
.   Include   :   OPREXPKY
.   Routine   :   KOPEXA00 Keyin Item Code           
.   Parameter :   CKEYTYP 0 = Keyin , 1 = Accept, 2 = Either
.   Return    :   EXIT = 1 null entry, 2 EXITCHAR entered
.-------------------------------------------------------------------------------
KOPEXA00 TOPIC     "OPEXCODE"
          MOVE      UNDLN70,OPEXCODE
          KEYIN     *PCCOL:CVERT,*DV,OPEXCODE:                                  
                    *PCCOL:CVERT,*V2LON,OPEXCODE:                               
                    *PCCOL:CVERT,*DV,OPEXCODE
.
          ENDSET    OPEXCODE
          APPEND    SP70,OPEXCODE
          RESET     OPEXCODE
.
          MATCH     SP70,OPEXCODE
          GOTO      KOPEXA90 IF EQUAL
.
          CMATCH    EXITCHAR,OPEXCODE
          GOTO      KOPEXA95 IF EQUAL
.
          CMATCH    QUEST,OPEXCODE
          GOTO      KOPEXA10 IF NOT EQUAL
.
          MOVE      CCITEM,SCCITEM
          CALL      HOPEXA00
          MOVE      SCCITEM,CCITEM
.
          ENDSET    OPEXCODE
          APPEND    SP70,OPEXCODE
          RESET     OPEXCODE
.
          MATCH     SP70,OPEXCODE
          GOTO      KOPEXA00 IF EQUAL
.
          DISPLAY   *PCCOL:CVERT,*V2LON,OPEXCODE                                
KOPEXA10
          PACK      KEY6,OPEXCODE                                               
          CALL      RAOPEXP1
          BRANCH    OVRCD,KOPEXA80
          BRANCH    CKEYTYP,KOPEXA75
          CALL      RDOPEXP1
KOPEXA70
          MOVE      ZERO,EXIT
          GOTO      KOPEXA99
KOPEXA75
          MOVE      "Item Code Already Exist - ",DISPMSG                                             
          CALL      MESSAGE1
          GOTO      KOPEXA00
KOPEXA80
          MOVE      ZERO,EXIT
          BRANCH    CKEYTYP,KOPEXA99,KOPEXA99
          MOVE      "Item Code Does Not Exist - ",DISPMSG                                            
          CALL      MESSAGE1
          GOTO      KOPEXA00
KOPEXA90
          MOVE      ONE,EXIT
          GOTO      KOPEXA99
KOPEXA95
          MOVE      TWO,EXIT
KOPEXA99 TOPIC    PRGID
          RETURN
.
