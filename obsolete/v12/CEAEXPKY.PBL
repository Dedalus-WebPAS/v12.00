HOPEXA46
          CALL      RPOPEXP1
          BRANCH    OVRCD,HOPEXA47
          PACK      KEY6,OPEXCODE,SP70                                          
.                                                                               
          SUB       ONE,XITEMNO
          COMPARE   ZERO,XITEMNO
          GOTO      HOPEXA46 IF NOT EQUAL
HOPEXA47
          MOVE      ZERO,XITEMNO
          GOTO      HOPEXA10
HOPEXA50  COMPARE   ZERO,CSEARCH
          GOTO      HOPEXA55 IF EQUAL
          MOVE      ZERO,CSEARCH
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          ADD       ONE,STDROW
