.---------------------------------------------------------------------------
.   System    :   Theatre System                     
.   Include   :   CEACLIKY
.   Routine   :   KOPCLA00 Keyin Clinic/Surgeon      
.   Parameter :   CKEYTYP 0 = Keyin , 1 = Accept, 2 = Either
.   Return    :   EXIT = 1 null entry, 2 EXITCHAR entered
.-------------------------------------------------------------------------------
KOPCLA00 TOPIC     "OPCLCLIN"
          MOVE      UNDLN70,OPCLCLIN
          KEYIN     *PCCOL:CVERT,*DV,OPCLCLIN:                                  
                    *PCCOL:CVERT,*V2LON,OPCLCLIN:                               
                    *PCCOL:CVERT,*DV,OPCLCLIN
.
          ENDSET    OPCLCLIN
          APPEND    SP70,OPCLCLIN
          RESET     OPCLCLIN
.
          MATCH     SP70,OPCLCLIN
          GOTO      KOPCLA90 IF EQUAL
.
          CMATCH    EXITCHAR,OPCLCLIN
          GOTO      KOPCLA95 IF EQUAL
.
          CMATCH    QUEST,OPCLCLIN
          GOTO      KOPCLA10 IF NOT EQUAL
.
          MOVE      CCITEM,SCCITEM
          CALL      HOPCLA00
          MOVE      SCCITEM,CCITEM
.
          ENDSET    OPCLCLIN
          APPEND    SP70,OPCLCLIN
          RESET     OPCLCLIN
.
          MATCH     SP70,OPCLCLIN
          GOTO      KOPCLA00 IF EQUAL
.
          DISPLAY   *PCCOL:CVERT,*V2LON,OPCLCLIN                                
KOPCLA10
          PACK      KEY6,OPCLCLIN                                               
          CALL      RAOPCLI1
          BRANCH    OVRCD,KOPCLA80
          BRANCH    CKEYTYP,KOPCLA75
          CALL      RDOPCLI1
KOPCLA70
          MOVE      ZERO,EXIT
          GOTO      KOPCLA99
KOPCLA75
          MOVE      "Clinic/Surgeon Already Exist - ",DISPMSG                                        
          CALL      MESSAGE1
          GOTO      KOPCLA00
KOPCLA80
          MOVE      ZERO,EXIT
          BRANCH    CKEYTYP,KOPCLA99,KOPCLA99
          MOVE      "Clinic/Surgeon Does Not Exist - ",DISPMSG                                       
          CALL      MESSAGE1
          GOTO      KOPCLA00
KOPCLA90
          MOVE      ONE,EXIT
          GOTO      KOPCLA99
KOPCLA95
          MOVE      TWO,EXIT
KOPCLA99 TOPIC    PRGID
          RETURN
.
