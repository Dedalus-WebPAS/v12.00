. Calculate Episode Costs
.------------------------------------------------------------
PROC0000  DISPLAY    *P1:24,*EL,"Processing ...."
          MOVE     ZERO,TOTFDR
          MOVE     ZERO,TOTFID
          MOVE     ZERO,TOTVDR
          MOVE     ZERO,TOTVID
          MOVE     ZERO,CPAGENO
          MOVE     "60",CLNO
          PACK     KEY26,STRDAT,SP70
          CLOCK    TIME,CTIMEIS
          MOVE     ZERO,SECTOR
          CALL     RSCCEP4
PROC1000  CALL     RKCCEP4               * Loop through file by Discharge Date
          BRANCH   OVRCD,PROC9000
          MATCH    CCEPDDAT,ENDDAT       * Check for End of Date Range
          GOTO     PROC9000 IF LESS
.
          MATCH    "0",CCEPCOM           * Ignore Incomplete Episodes
          GOTO     PROC1000 IF EQUAL
.
          ADD      ONE,TOTALSCN          * Count Records Processed
          IF       (TOTALSCN%500=0)
            CLOCK    TIME,CTIMEIS
            DISPLAY  *P40:24,*EL,"Records Processed : ",TOTALSCN:
                     " at ",CTIMEIS
          ENDIF
.
          CALL     CALC0000
          IF       PRTREPT=1
            CALL     PRNT0000
          ENDIF
.
          GOTO     PROC1000
.
PROC9000  IF       PRTREPT=1
            ASSIGN    TOTFDR+TOTFID+TOTVDR+TOTVID,TOTALAMT
            CALL      UND132
            PRINT     "Grand Total     ",SP20,SP10,SP1:
                      TOTFDR,TOTFID,TOTVDR,TOTVID,TOTALAMT
            CALL      UND132
            PRINT     *40,"*** End of Report ***"
          ENDIF
PROC9999  RETURN
.--------------------------------------------------
. Calculate Episode Costs
.--------------------------------------------------
CALC0000  PACK      KEY21,CCEPHCD,CCEPEPS,CCSPMID,SP70
          UNPACK    KEY21,CCRBHCD,CCRBEPS,CCRBMID
          CALL      RDCCRB1
          MOVE      ZERO,CCRBFDR
          MOVE      ZERO,CCRBFID
          MOVE      ZERO,CCRBVDR
          MOVE      ZERO,CCRBVID
.
          PACK      KEY31,CCEPHCD,CCEPEPS,SP70
          CALL      RSCCUP2
CALC1000  CALL      RKCCUP2
          BRANCH    OVRCD,CALC9000
          MATCH     CCEPHCD,CCUPHCD
          GOTO      CALC9000 IF NOT EQUAL
          MATCH     CCEPEPS,CCUPENC
          GOTO      CALC9000 IF NOT EQUAL
          PACK      KEY21,CCSPMID,CCUPHCD,CCUPDPT,CCUPPCD
          CALL      RDCCRA1
          BRANCH    OVRCD,CALC1000
.
          ASSIGN    CCRBFDR+(CCRAFDR*CCUPQTY),CCRBFDR
          ASSIGN    CCRBFID+(CCRAFID*CCUPQTY),CCRBFID
          ASSIGN    CCRBVDR+(CCRAVDR*CCUPQTY),CCRBVDR
          ASSIGN    CCRBVID+(CCRAVID*CCUPQTY),CCRBVID
.
          GOTO      CALC1000
.
CALC9000  PACK      KEY21,CCRBHCD,CCRBEPS,CCRBMID
          CALL      RACCRB1
          IF        OVRCD=0
            CALL      UPCCRB1
          ELSE
            CALL      WRCCRB1
          ENDIF
.
CALC9999  RETURN
.------------------------------------------------------------
. Print Report
