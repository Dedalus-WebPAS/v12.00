PRNT0000  ADD       ONE,CLNO
          COMPARE   "55",CLNO
          CALL      HEAD0000 IF NOT LESS
          ASSIGN    CCRBFDR+CCRBFID+CCRBVDR+CCRBVID,TOTALAMT
          PRINT     CCEPEPS,CCEPSUR,CCEPURN,SP1:
                    CCRBFDR,CCRBFID,CCRBVDR,CCRBVID,TOTALAMT
          ASSIGN    TOTFDR+CCRBFDR,TOTFDR
          ASSIGN    TOTFID+CCRBFID,TOTFID
          ASSIGN    TOTVDR+CCRBVDR,TOTVDR
          ASSIGN    TOTVID+CCRBVID,TOTVID
          RETURN
.
