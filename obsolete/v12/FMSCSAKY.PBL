KFMCSA00 TOPIC     "FMCSACC "
          MOVE      UNDLN70,FMCSACC 
          KEYIN     *PCCOL:CVERT,*DV,FMCSACC:                                   
                    *PCCOL:CVERT,*V2LON,FMCSACC:                                
