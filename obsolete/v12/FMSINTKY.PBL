.   System    :   Financial Management System        
.   Include   :   FMSINTKY
.   Routine   :   KFMINA00 Keyin Interface Type      
.   Parameter :   CKEYTYP 0 = Keyin , 1 = Accept, 2 = Either
.   Return    :   EXIT = 1 null entry, 2 EXITCHAR entered
.-------------------------------------------------------------------------------
KFMINA00 TOPIC     "FMINCODE"
          MOVE      UNDLN70,FMINCODE
          KEYIN     *PCCOL:CVERT,*DV,FMINCODE:                                  
                    *PCCOL:CVERT,*V2LON,FMINCODE:                               
                    *PCCOL:CVERT,*DV,FMINCODE
.
          ENDSET    FMINCODE
          APPEND    SP70,FMINCODE
          RESET     FMINCODE
.
          MATCH     SP70,FMINCODE
          GOTO      KFMINA90 IF EQUAL
.
          CMATCH    EXITCHAR,FMINCODE
          GOTO      KFMINA95 IF EQUAL
.
          CMATCH    QUEST,FMINCODE
          GOTO      KFMINA10 IF NOT EQUAL
.
          MOVE      CCITEM,SCCITEM
          CALL      HFMINA00
          MOVE      SCCITEM,CCITEM
.
          ENDSET    FMINCODE
          APPEND    SP70,FMINCODE
          RESET     FMINCODE
.
          MATCH     SP70,FMINCODE
          GOTO      KFMINA00 IF EQUAL
.
          DISPLAY   *PCCOL:CVERT,*V2LON,FMINCODE                                
KFMINA10
          PACK      KEY3,FMINCODE                                               
          CALL      RAFMIN1 
          BRANCH    OVRCD,KFMINA80
          BRANCH    CKEYTYP,KFMINA75
          CALL      RDFMIN1 
KFMINA70
          MOVE      ZERO,EXIT
          GOTO      KFMINA99
KFMINA75
          MOVE      "Interface Type Already Exist - ",DISPMSG                                        
          CALL      MESSAGE1
          GOTO      KFMINA00
KFMINA80
          MOVE      ZERO,EXIT
          BRANCH    CKEYTYP,KFMINA99,KFMINA99
          MOVE      "Interface Type Does Not Exist - ",DISPMSG                                       
          CALL      MESSAGE1
          GOTO      KFMINA00
KFMINA90
          MOVE      ONE,EXIT
          GOTO      KFMINA99
KFMINA95
          MOVE      TWO,EXIT
KFMINA99 TOPIC    PRGID
          RETURN
