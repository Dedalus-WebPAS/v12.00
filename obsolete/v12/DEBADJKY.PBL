.   System    :   Accounts Receiveable               
.   Include   :   DEBADJKY
.   Routine   :   HDBADA00 Adjustment Code     
.   Return    :           
.-------------------------------------------------------------------------------
HDBADA00
          MOVE      ZERO,CSCRSIZ
          IF        HTOP<3
            MOVE      "10",HTOP
            MOVE      "24",HBOT
            MOVE      "40",HLEF
            MOVE      "80",HRIG
          ENDIF
HDBADA04
          CALL      GSCRN000
          BRANCH    EXIT,HDBADA99
          MOVE      STDCOL00,STDCOL01
          ADD       " 5",STDCOL01
          DISPLAY   *PSTDCOL01:STDROW,*V2LON,*ULON,"Code"               
.
          MOVE      STDCOL01,STDCOL02
          ADD       " 5",STDCOL02
          DISPLAY   *PSTDCOL02:STDROW,*V2LON,*ULON,"Description"        
.
          MOVE      STDCOL02,STDCOL03
          ADD       "35",STDCOL03
HDBADA08
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          MOVE      SP70,DBADCOD 
          PACK      KEY3,DBADCOD,SP70                                           
.                                                                               
.                                                                               
          CALL      RSDBAD1 
HDBADA10
          CALL      RKDBAD1 
          BRANCH    OVRCD,HDBADA15
          PACK      KEY3,DBADCOD,SP70                                           
.                                                                               
.                                                                               
          BRANCH    CSEARCH,HDBADA12
          CALL      HDBADA60
          BRANCH    OVRCD,HDBADA10
HDBADA12
          ADD       ONE,XITEMNO
          ADD       ONE,STDROW
          STORE     KEY3,XITEMNO,ST1,ST2,ST3,ST4,ST5:                            
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          DISPLAY   *PSTDCOL00:STDROW,SP1,*V2LON,XITEMNO,DOT
          DISPLAY   *PSTDCOL01:STDROW,DBADCOD 
          DISPLAY   *PSTDCOL02:STDROW,DBADDES 
          COMPARE   MAXITEM,XITEMNO
          GOTO      HDBADA10 IF NOT EQUAL
HDBADA15
.                                                                               
          MOVE      ONE,DITEM
          MOVE      MINITEM,DROW
          ADD       ONE,DROW
          DISPLAY   *PSTDCOL00:DROW,*V2LON,*HON,SP1,DITEM,DOT
          CLIP
          FLUSH     HLEF,HTOP,HRIG,HBOT
.
HDBADA20
          CALL      HSCRI000
          BRANCH    EXIT,HDBADA30,HDBADA35,HDBADA40,HDBADA45,HDBADA04:
                              HDBADA91,HDBADA50
          GOTO      HDBADA92
HDBADA30
          CALL      RKDBAD1 
          BRANCH    OVRCD,HDBADA85
          PACK      KEY3,DBADCOD,SP70                                           
.                                                                               
.                                                                               
          CALL      RPDBAD1 
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HDBADA10
HDBADA35
          MOVE      ST1,KEY3 
          CALL      RDDBAD1 
          CALL      RPDBAD1 
          BRANCH    OVRCD,HDBADA85
          PACK      KEY3,DBADCOD,SP70                                           
.                                                                               
.                                                                               
.                                                                               
.                                                                               
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          MOVE      MINITEM,STDROW
          MOVE      MAXITEM,XITEMNO
HDBADA36
          CALL      RPDBAD1 
          BRANCH    OVRCD,HDBADA37
          PACK      KEY3,DBADCOD,SP70                                           
.                                                                               
.                                                                               
          SUB       ONE,XITEMNO
          COMPARE   ZERO,XITEMNO
          GOTO      HDBADA36 IF NOT EQUAL
HDBADA37
          MOVE      ZERO,XITEMNO
          GOTO      HDBADA10
HDBADA40
          MOVE      ST1,KEY3 
          CALL      RDDBAD1 
          CALL      RPDBAD1 
          BRANCH    OVRCD,HDBADA85
          PACK      KEY3,DBADCOD,SP70                                           
.                                                                               
.                                                                               
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HDBADA08
HDBADA45
          CALL      RKDBAD1 
          BRANCH    OVRCD,HDBADA85
          PACK      KEY3,DBADCOD,SP70                                           
.                                                                               
.                                                                               
          SUSPEND
          CLIP      1,1,CRIG,24
.
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          MOVE      ZERO,XITEMNO
          PACK      KEY3,Z70                                                    
          MOVE      MINITEM,STDROW
          MOVE      MAXITEM,XITEMNO
          CALL      RSDBAD1 
HDBADA46
          CALL      RPDBAD1 
          BRANCH    OVRCD,HDBADA47
          PACK      KEY3,DBADCOD,SP70                                           
.                                                                               
.                                                                               
          SUB       ONE,XITEMNO
          COMPARE   ZERO,XITEMNO
          GOTO      HDBADA46 IF NOT EQUAL
HDBADA47
          MOVE      ZERO,XITEMNO
          GOTO      HDBADA10
HDBADA50  COMPARE   ZERO,CSEARCH
          GOTO      HDBADA55 IF EQUAL
          MOVE      ZERO,CSEARCH
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          ADD       ONE,STDROW
          UNPACK    SP70,SCHFLD01,SCHFLD02,SCHFLD03,SCHFLD04,SCHFLD05
          UNPACK    SP70,SCHFLD06,SCHFLD07,SCHFLD08,SCHFLD09,SCHFLD10
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          DISPLAY   *PSTDCOL00:STDROW,*V2LON,*HON,"Sch"
          KEYIN     *PSTDCOL01:STDROW,*V2LON,SCHFLD01
          RESET     SCHFLD01
          KEYIN     *PSTDCOL02:STDROW,*V2LON,SCHFLD02
          RESET     SCHFLD02
          PACK      KEY8,SP70
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HDBADA08
HDBADA55  MOVE      ONE,CSEARCH
          PACK      KEY8,SP70
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HDBADA08
HDBADA60  MOVE      ZERO,OVRCD
          MATCH     SP70,SCHFLD01
          GOTO      HDBADA61 IF EQUAL
          MATCH     SCHFLD01,DBADCOD 
          GOTO      HDBADA72 IF NOT EQUAL
HDBADA61
          MATCH     SP70,SCHFLD02
          GOTO      HDBADA62 IF EQUAL
          MATCH     SCHFLD02,DBADDES 
          GOTO      HDBADA72 IF NOT EQUAL
HDBADA62
HDBADA63
HDBADA64
HDBADA65
HDBADA66
HDBADA67
HDBADA68
HDBADA69
HDBADA70
          GOTO      HDBADA75
HDBADA72  MOVE      ONE,OVRCD
HDBADA75  RETURN
HDBADA85
          LOAD      KEY3,XITEMNO,ST1,ST2,ST3,ST4,ST5:                            
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          UNPACK    KEY3,DBADCOD                                                
          CALL      RDDBAD1 
HDBADA90
.                                                                               
          BEEP
          GOTO      HDBADA20
HDBADA91
          MOVE      SP70,DBADDES 
          MOVE      SP70,DBADTYP 
          MOVE      SP70,DBADLED 
          MOVE      SP70,DBADIAC 
          MOVE      SP70,DBADTAC 
          MOVE      SP70,DBADUR1 
          MOVE      SP70,DBADUR2 
          MOVE      SP70,DBADUY1 
          MOVE      SP70,DBADUY2 
          MOVE      SP70,DBADSPA 
          MOVE      SP70,KEY3 
          MOVE      SP70,DBADCOD 
          GOTO      HDBADA96
HDBADA92
          MOVE      SP70,KEY3 
          MOVE      SP70,DBADCOD 
          LOAD      KEY3,CCITEM,ST1,ST2,ST3,ST4,ST5:                            
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          UNPACK    KEY3,DBADCOD                                                
HDBADA96
          PUTSCR    CSSCRNUM,HLEF,HTOP,HRIG,HBOT
          CALL      FRESCR00
          MOVE      ZERO,HTOP
          MOVE      ZERO,HLEF
          MOVE      ZERO,HBOT
          MOVE      ZERO,HRIG
HDBADA99
          RETURN
