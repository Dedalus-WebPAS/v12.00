.********************************************************************
. Print Codes Report
.********************************************************************
REPT0000  DISPLAY   *P1:24,*EL,*P50:24,"Printing :   ";
          MOVE      ZERO,CPAGENO                 * reset page no.
          CLOCK     TIME,CTIMEIS                 * get current time
          MOVE      "999",CLNO                   * init last line number
          PACK      KEY5,FCAT,SP70
          CALL      RSAMCD1
.
REPT1000  CALL      RKAMCD1
          BRANCH    OVRCD,REPT9000
          MATCH     AMCDCAT,TCAT
          GOTO      REPT9000 IF LESS             * out of range ?
.
          DISPLAY   *P61:24,*V2LON,AMCDCAT,"/",AMCDCOD,*EL;
.
          MATCH     AMCDCOD,SP70                 * category record ?
          GOTO      REPT2000 IF NOT EQUAL
          CALL      HEAD0000
          GOTO      REPT1000
.
REPT2000  COMPARE   "55",CLNO                    * end of page ?
          CALL      HEAD0000 IF NOT LESS
.
          PRINT     "| ",AMCDCOD,"  | ",AMCDDES," | ",*80,"|"
          ADD       "1",CLNO           * add one to line number
          GOTO      REPT1000                     * get next record
.
REPT9000  COMPARE   ZERO,CPAGENO
          CALL      HEAD0000 IF EQUAL          * print header if nothing printed
          CALL      UND80                        * print line
          PRINT     "****   End of Report   ****"
.
REPT9999  RETURN
.********************************************************************
. Report Heading
.********************************************************************
HEAD0000  CALL      HEAD80                       * print heading
          PACK      KEY10,AMCDCAT,AMCDCOD,SP5    * save current key
          MOVE      SP70,AMCDDES                 * clear description
          PACK      KEY5,AMCDCAT,SP70            * set up key
          CALL      RDAMCD1                      * read category data
.
          ADD       "4",CLNO
          PRINT     *20,"From : ",FROMCAT:
                    *N,*20,"To   : ",TOCAT:
                    *N,"Category : ",AMCDCAT,SP2,AMCDDES
          CALL      UND80                        * print line
          PRINT     "| Code | Description",*46,"| Notes",*80,"|"
          ADD       "1",CLNO
          CALL      UND80                        * print line
.                                                * re-read current record
          MOVE      SP20,AMCDDES                 * clear description
          PACK      KEY5,KEY10,SP5               * set up key
          CALL      RDAMCD1                      * read codes file
.
HEAD9999  RETURN
