IBATM1DS  MOVE      SP6,KEY6
          CALL      RSIBTH1  
IBTMH100  DISPLAY   *P1:4,*EF,*P30:4,*V2LON,*ULON,"Stationery Codes" 
          MOVE      ONE,CCOL
          MOVE      FIVE,CVERT
.
IBTMH200  CALL      RKIBTH1
          BRANCH    OVRCD,IBTMH999
          DISPLAY   *PCCOL:CVERT,*V2LON,IBTHSCOD,*HOFF,SP2,IBTHDESC
          ADD       ONE,ITEMS
          ADD       ONE,CVERT
          COMPARE   "23",CVERT
          GOTO      IBTMH200 IF LESS
          MOVE      FIVE,CVERT
          ADD       "40",CCOL
          COMPARE   "70",CCOL 
          GOTO      IBTMH200 IF LESS
          MOVE      ONE,CCOL
IBTMH300  KEYIN     *P1:24,"(",*V2LON,"C",*HOFF,")ontinue, (",*V2LON,"F",*HOFF:
                    ")irst Screen, (",*V2LON,"N",*HOFF,")ext Screen : ":
                    *V2LON,ANS
          REP       UPPLOW,ANS
          MATCH     "F",ANS
          GOTO      IBATM1DS IF EQUAL
          MATCH     "N",ANS
          GOTO      IBTMH100 IF EQUAL
          MATCH     "C",ANS
          GOTO      IBTMH999 IF EQUAL
          PACK      KEY6,ANS,SP6
          MATCH     KEY6,SP6
          GOTO      IBTMH200 IF EQUAL
          BEEP
          GOTO      IBTMH300
.
IBTMH999  RETURN
