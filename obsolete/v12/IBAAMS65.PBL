.------------------------------------------------------------
. Process End of Year
.------------------------------------------------------------
PROC0000
.
. Update Control File
.---------------------
          MOVE      THREE,AUDTSECT
          READ      CONTROLF,AUDTSECT;CFAMSRUN,CFAMYEAR,*18,CFAMIRUN:
                                      CFAMGL01,CFAMGL02,CFAMGL03,CFAMGL04:
                                      CFAMGL05,CFAMGL06,CFAMGL07,CFAMGL08:
                                      CFAMGL09,CFAMGL10,CFAMGL11,CFAMGL12:
                                      CFAMGL13
          ASSIGN    CFAMGL01+CFAMGL02+CFAMGL03+CFAMGL04,CVERT
          ASSIGN    CVERT+CFAMGL05+CFAMGL06+CFAMGL07+CFAMGL08,CVERT
          ASSIGN    CVERT+CFAMGL09+CFAMGL10+CFAMGL11+CFAMGL12,CVERT
          ASSIGN    CVERT+CFAMGL13,CVERT
PROC0100  BEEP
          KEYIN     *P1:24,*EL,"Number of Periods Transferred to the GL = ":
                    *V2LON,*DV,CVERT,"  Continue with End of Year (":
                    *V2LON,"Y",*HOFF,"/",*V2LON,"N",*HOFF,") ? ",*V2LON,ANS
          REP       UPPLOW,ANS
          MATCH     ANSN,ANS
          GOTO      PROC9999 IF EQUAL
          MATCH     ANSY,ANS
          GOTO      PROC0100 IF NOT EQUAL
.
          MOVE      CFAMYEAR,OLDYEAR
          MOVE      CFAMYEAR,CYEARF4
          ADD       ONE,CYEARF4
          MOVE      CYEARF4,CFAMYEAR
          MOVE      CFAMYEAR,NEWYEAR
.
          MOVE      THREE,AUDTSECT
          MOVE      ZERO,CFAMGL01
          MOVE      ZERO,CFAMGL02
          MOVE      ZERO,CFAMGL03
          MOVE      ZERO,CFAMGL04
          MOVE      ZERO,CFAMGL05
          MOVE      ZERO,CFAMGL06
          MOVE      ZERO,CFAMGL07
          MOVE      ZERO,CFAMGL08
          MOVE      ZERO,CFAMGL09
          MOVE      ZERO,CFAMGL10
          MOVE      ZERO,CFAMGL11
          MOVE      ZERO,CFAMGL12
          MOVE      ZERO,CFAMGL13
          WRITAB    CONTROLF,AUDTSECT;CFAMSRUN,CFAMYEAR,*18,CFAMIRUN:
                                      CFAMGL01,CFAMGL02,CFAMGL03,CFAMGL04:
                                      CFAMGL05,CFAMGL06,CFAMGL07,CFAMGL08:
                                      CFAMGL09,CFAMGL10,CFAMGL11,CFAMGL12:
                                      CFAMGL13
.
. Loop Through the Asset Mastertfile
.------------------------------------
          MOVE      CFAMYEAR,EFFYEAR
          DISPLAY   *P1:24,*EL,"Calculating Depreciation : "
          MOVE      ZERO,EFFPER
          MOVE      ZERO,ASSCOUNT
          PACK      KEY14,SP70
          CALL      RSAMMA1
PROC1000  CALL      RKAMMA1
          BRANCH    OVRCD,PROC9000
          ADD       ONE,ASSCOUNT
          IF        ASSCOUNT%100=0
            DISPLAY   *P28:24,*EL,*V2LON,AMMAREG,"/",AMMAASS," - ",ASSCOUNT
          ENDIF
.
. Add Depreciation for the Year onto the Accumulated Depreciation
.-----------------------------------------------------------------
          PACK      KEY18,AMMAREG,AMMAASS,OLDYEAR
          CALL      RDAMDS1
          BRANCH    OVRCD,PROC1100
.
          MOVE      AMMAAAD,AMDSAAD   * Update Last Years Accumulated Depn
          MOVE      AMMATAD,AMDSTAD   * Revaluation and Dep'n Types
          MOVE      AMMAADT,AMDSADT
          MOVE      AMMATDT,AMDSTDT
          MOVE      AMMARVT,AMDSRVT
.
          CALL      UPAMDS1
.
          ASSIGN    AMMAAAD+AMDSA01+AMDSA02+AMDSA03+AMDSA04+AMDSA05,AMMAAAD
          ASSIGN    AMMAAAD+AMDSA06+AMDSA07+AMDSA08+AMDSA09+AMDSA10,AMMAAAD
          ASSIGN    AMMAAAD+AMDSA11+AMDSA12+AMDSA13,AMMAAAD
.
          ASSIGN    AMMATAD+AMDST01+AMDST02+AMDST03+AMDST04+AMDST05,AMMATAD
          ASSIGN    AMMATAD+AMDST06+AMDST07+AMDST08+AMDST09+AMDST10,AMMATAD
          ASSIGN    AMMATAD+AMDST11+AMDST12+AMDST13,AMMATAD
.
          CALL      UPAMMA1           * Update This Years Accumulated Dep'n
.
. Calculate Depreciation for the New Year
.-----------------------------------------
PROC1100  CALL      ASSDEP00
          GOTO      PROC1000
.
PROC9000  DISPLAY   *P1:24,*EL,"End of Year Complete - ";
          CALL      HITENTER
.
PROC9999  RETURN
