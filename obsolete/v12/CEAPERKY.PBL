.---------------------------------------------------------------------------
.   System    :   Casemix Expense Analysis           
.   Include   :   CEAPERKY
.   Routine   :   KCEPEA00 Keyin Period              
.   Parameter :   CKEYTYP 0 = Keyin , 1 = Accept, 2 = Either
.   Return    :   EXIT = 1 null entry, 2 EXITCHAR entered
.-------------------------------------------------------------------------------
KCEPEA00 TOPIC     "CEPEPER "
          MOVE      UNDLN70,CEPEPER 
          KEYIN     *PCCOL:CVERT,*DV,CEPEPER:                                   
                    *PCCOL:CVERT,*V2LON,*JR,*ZF,CEPEPER:                        
                    *PCCOL:CVERT,*DV,CEPEPER 
.
          ENDSET    CEPEPER 
          APPEND    SP70,CEPEPER 
          RESET     CEPEPER 
.
          MATCH     SP70,CEPEPER 
          GOTO      KCEPEA90 IF EQUAL
.
          ENDSET    CEPEPER 
          CMATCH    EXITCHAR,CEPEPER 
          GOTO      KCEPEA95 IF EQUAL
.
          CMATCH    QUEST,CEPEPER 
          GOTO      KCEPEA10 IF NOT EQUAL
.
          MOVE      CCITEM,SCCITEM
          CALL      HCEPEA00
          MOVE      SCCITEM,CCITEM
.
          ENDSET    CEPEPER 
          APPEND    SP70,CEPEPER 
          RESET     CEPEPER 
.
          MATCH     SP70,CEPEPER 
          GOTO      KCEPEA00 IF EQUAL
.
          DISPLAY   *PCCOL:CVERT,*V2LON,CEPEPER                                 
KCEPEA10
          RESET     CEPEPER 
          PACK      KEY6,CEPEYEAR,CEPEPER                                       
          CALL      RACEPE1 
          BRANCH    OVRCD,KCEPEA80
          BRANCH    CKEYTYP,KCEPEA75
          CALL      RDCEPE1 
KCEPEA70
          MOVE      ZERO,EXIT
          GOTO      KCEPEA99
KCEPEA75
          MOVE      "Period Already Exist - ",DISPMSG                                                
          CALL      MESSAGE1
          GOTO      KCEPEA00
KCEPEA80
          MOVE      ZERO,EXIT
          BRANCH    CKEYTYP,KCEPEA99,KCEPEA99
          MOVE      "Period Does Not Exist - ",DISPMSG                                               
          CALL      MESSAGE1
          GOTO      KCEPEA00
KCEPEA90
          MOVE      ONE,EXIT
          GOTO      KCEPEA99
KCEPEA95
          MOVE      TWO,EXIT
KCEPEA99 TOPIC    PRGID
          RETURN
.---------------------------------------------------------------------------
.   System    :   Casemix Expense Analysis           
.   Include   :   CEAPERKY
.   Routine   :   HCEPEA00 Period              
.   Return    :           
.-------------------------------------------------------------------------------
HCEPEA00
          MOVE      ZERO,CSCRSIZ
          IF        HTOP<3
            MOVE      "10",HTOP
            MOVE      "24",HBOT
            MOVE      "40",HLEF
            MOVE      "80",HRIG
          ENDIF
HCEPEA04
          CALL      GSCRN000
          BRANCH    EXIT,HCEPEA99
          MOVE      STDCOL00,STDCOL01
          ADD       " 5",STDCOL01
          DISPLAY   *PSTDCOL01:STDROW,*V2LON,*ULON,"Period"             
.
          MOVE      STDCOL01,STDCOL02
          ADD       " 7",STDCOL02
          DISPLAY   *PSTDCOL02:STDROW,*V2LON,*ULON,"Description"        
.
          MOVE      STDCOL02,STDCOL03
          ADD       "16",STDCOL03
          DISPLAY   *PSTDCOL03:STDROW,*V2LON,*ULON,"Ending"             
.
          MOVE      STDCOL03,STDCOL04
          ADD       "11",STDCOL04
HCEPEA08
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          MOVE      SP70,CEPEPER 
          PACK      KEY6,CEPEYEAR,CEPEPER,SP70                                  
          PACK      SAVKEY80,CEPEYEAR,CEPEPER,SP70                              
          SETLPTR   SAVKEY80,4                                                  
          CALL      RSCEPE1 
HCEPEA10
          CALL      RKCEPE1 
          BRANCH    OVRCD,HCEPEA15
          PACK      KEY6,CEPEYEAR,CEPEPER,SP70                                  
          MATCH     SAVKEY80,KEY6                                               
          GOTO      HCEPEA15 IF NOT EQUAL                                       
          BRANCH    CSEARCH,HCEPEA12
          CALL      HCEPEA60
          BRANCH    OVRCD,HCEPEA10
HCEPEA12
          ADD       ONE,XITEMNO
          ADD       ONE,STDROW
          STORE     KEY6,XITEMNO,ST1,ST2,ST3,ST4,ST5:                           
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          DISPLAY   *PSTDCOL00:STDROW,SP1,*V2LON,XITEMNO,DOT
          DISPLAY   *PSTDCOL01:STDROW,CEPEPER 
          DISPLAY   *PSTDCOL02:STDROW,CEPEDES 
          CALL      ECEPEA00
          DISPLAY   *PSTDCOL03:STDROW,CPCDATE 
          COMPARE   MAXITEM,XITEMNO
          GOTO      HCEPEA10 IF NOT EQUAL
HCEPEA15
          UNPACK    SAVKEY80,CEPEYEAR,CEPEPER                                   
          MOVE      ONE,DITEM
          MOVE      MINITEM,DROW
          ADD       ONE,DROW
          DISPLAY   *PSTDCOL00:DROW,*V2LON,*HON,SP1,DITEM,DOT
          CLIP
          FLUSH     HLEF,HTOP,HRIG,HBOT
.
HCEPEA20
          CALL      HSCRI000
          BRANCH    EXIT,HCEPEA30,HCEPEA35,HCEPEA40,HCEPEA45,HCEPEA04:
                              HCEPEA91,HCEPEA50
          GOTO      HCEPEA92
HCEPEA30
          CALL      RKCEPE1 
          BRANCH    OVRCD,HCEPEA85
          PACK      KEY6,CEPEYEAR,CEPEPER,SP70                                  
          MATCH     SAVKEY80,KEY6                                               
          GOTO      HCEPEA85 IF NOT EQUAL                                       
          CALL      RPCEPE1 
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HCEPEA10
HCEPEA35
          MOVE      ST1,KEY6 
          CALL      RDCEPE1 
          CALL      RPCEPE1 
          BRANCH    OVRCD,HCEPEA85
          PACK      KEY6,CEPEYEAR,CEPEPER,SP70                                  
          MATCH     SAVKEY80,KEY6                                               
          GOTO      HCEPEA85 IF NOT EQUAL                                       
          MATCH     SP70,CEPEPER                                                
          GOTO      HCEPEA85 IF EQUAL                                           
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          MOVE      MINITEM,STDROW
          MOVE      MAXITEM,XITEMNO
HCEPEA36
          CALL      RPCEPE1 
          BRANCH    OVRCD,HCEPEA37
          PACK      KEY6,CEPEYEAR,CEPEPER,SP70                                  
          MATCH     SAVKEY80,KEY6                                               
          GOTO      HCEPEA37 IF NOT EQUAL                                       
          SUB       ONE,XITEMNO
          COMPARE   ZERO,XITEMNO
          GOTO      HCEPEA36 IF NOT EQUAL
HCEPEA37
          MOVE      ZERO,XITEMNO
          GOTO      HCEPEA10
HCEPEA40
          MOVE      ST1,KEY6 
          CALL      RDCEPE1 
          CALL      RPCEPE1 
          BRANCH    OVRCD,HCEPEA85
          PACK      KEY6,CEPEYEAR,CEPEPER,SP70                                  
          MATCH     SAVKEY80,KEY6                                               
          GOTO      HCEPEA85 IF NOT EQUAL                                       
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HCEPEA08
HCEPEA45
          CALL      RKCEPE1 
          BRANCH    OVRCD,HCEPEA85
          PACK      KEY6,CEPEYEAR,CEPEPER,SP70                                  
          MATCH     SAVKEY80,KEY6                                               
          GOTO      HCEPEA85 IF NOT EQUAL                                       
          SUSPEND
          CLIP      1,1,CRIG,24
.
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          MOVE      ZERO,XITEMNO
          PACK      KEY6,SAVKEY80,Z70                                           
          MOVE      MINITEM,STDROW
          MOVE      MAXITEM,XITEMNO
          CALL      RSCEPE1 
HCEPEA46
          CALL      RPCEPE1 
          BRANCH    OVRCD,HCEPEA47
          PACK      KEY6,CEPEYEAR,CEPEPER,SP70                                  
          MATCH     SAVKEY80,KEY6                                               
          GOTO      HCEPEA47 IF NOT EQUAL                                       
          SUB       ONE,XITEMNO
          COMPARE   ZERO,XITEMNO
          GOTO      HCEPEA46 IF NOT EQUAL
HCEPEA47
          MOVE      ZERO,XITEMNO
          GOTO      HCEPEA10
HCEPEA50  COMPARE   ZERO,CSEARCH
          GOTO      HCEPEA55 IF EQUAL
          MOVE      ZERO,CSEARCH
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          ADD       ONE,STDROW
          UNPACK    SP70,SCHFLD01,SCHFLD02,SCHFLD03,SCHFLD04,SCHFLD05
          UNPACK    SP70,SCHFLD06,SCHFLD07,SCHFLD08,SCHFLD09,SCHFLD10
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          DISPLAY   *PSTDCOL00:STDROW,*V2LON,*HON,"Sch"
          KEYIN     *PSTDCOL01:STDROW,*V2LON,SCHFLD01
          RESET     SCHFLD01
          KEYIN     *PSTDCOL02:STDROW,*V2LON,SCHFLD02
          RESET     SCHFLD02
          KEYIN     *PSTDCOL03:STDROW,*V2LON,SCHFLD03
          RESET     SCHFLD03
          PACK      KEY8,SP70
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HCEPEA08
HCEPEA55  MOVE      ONE,CSEARCH
          PACK      KEY8,SP70
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HCEPEA08
HCEPEA60  MOVE      ZERO,OVRCD
          MATCH     SP70,SCHFLD01
          GOTO      HCEPEA61 IF EQUAL
          MATCH     SCHFLD01,CEPEPER 
          GOTO      HCEPEA72 IF NOT EQUAL
HCEPEA61
          MATCH     SP70,SCHFLD02
          GOTO      HCEPEA62 IF EQUAL
          MATCH     SCHFLD02,CEPEDES 
          GOTO      HCEPEA72 IF NOT EQUAL
HCEPEA62
          CALL      ECEPEA00
          MATCH     SP70,SCHFLD03
          GOTO      HCEPEA63 IF EQUAL
          MATCH     SCHFLD03,CPCDATE 
          GOTO      HCEPEA72 IF NOT EQUAL
HCEPEA63
HCEPEA64
HCEPEA65
HCEPEA66
HCEPEA67
HCEPEA68
HCEPEA69
HCEPEA70
          GOTO      HCEPEA75
HCEPEA72  MOVE      ONE,OVRCD
HCEPEA75  RETURN
HCEPEA85
          LOAD      KEY6,XITEMNO,ST1,ST2,ST3,ST4,ST5:                           
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          UNPACK    KEY6,CEPEYEAR,CEPEPER                                       
          CALL      RDCEPE1 
HCEPEA90
          UNPACK    SAVKEY80,CEPEYEAR,CEPEPER                                   
          BEEP
          GOTO      HCEPEA20
HCEPEA91
          MOVE      SP70,CEPEDES 
          MOVE      SP70,CEPEEND 
          MOVE      SP70,CEPESPA 
          MOVE      SP70,KEY6 
          MOVE      SP70,CEPEPER 
          GOTO      HCEPEA96
HCEPEA92
          MOVE      SP70,KEY6 
          MOVE      SP70,CEPEPER 
          LOAD      KEY6,CCITEM,ST1,ST2,ST3,ST4,ST5:                            
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          UNPACK    KEY6,CEPEYEAR,CEPEPER                                       
HCEPEA96
          PUTSCR    CSSCRNUM,HLEF,HTOP,HRIG,HBOT
          CALL      FRESCR00
          MOVE      ZERO,HTOP
          MOVE      ZERO,HLEF
          MOVE      ZERO,HBOT
          MOVE      ZERO,HRIG
HCEPEA99
          RETURN
