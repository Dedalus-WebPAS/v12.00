.   System    :   Accounts Payable System            
.   Include   :   APSCTSKY
.   Routine   :   HAPCTA00 Main Help           
.   Return    :           
.-------------------------------------------------------------------------------
HAPCTA00
          MOVE      ZERO,CSCRSIZ
          IF        HTOP<3
            MOVE      "10",HTOP
            MOVE      "24",HBOT
            MOVE      "40",HLEF
            MOVE      "80",HRIG
          ENDIF
HAPCTA04
          CALL      GSCRN000
          BRANCH    EXIT,HAPCTA99
          MOVE      STDCOL00,STDCOL01
          ADD       " 5",STDCOL01
          DISPLAY   *PSTDCOL01:STDROW,*V2LON,*ULON,"Creditor Type"      
.
          MOVE      STDCOL01,STDCOL02
          ADD       " 4",STDCOL02
          MOVE      STDCOL02,STDCOL03
          ADD       "35",STDCOL03
HAPCTA08
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          MOVE      SP70,APCTCODE
          PACK      KEY3,APCTCODE,SP70                                          
.                                                                               
.                                                                               
          CALL      RSAPCT1 
HAPCTA10
          CALL      RKAPCT1 
          BRANCH    OVRCD,HAPCTA15
          PACK      KEY3,APCTCODE,SP70                                          
.                                                                               
.                                                                               
          BRANCH    CSEARCH,HAPCTA12
          CALL      HAPCTA60
          BRANCH    OVRCD,HAPCTA10
HAPCTA12
          ADD       ONE,XITEMNO
          ADD       ONE,STDROW
          STORE     KEY3,XITEMNO,ST1,ST2,ST3,ST4,ST5:                            
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          DISPLAY   *PSTDCOL00:STDROW,SP1,*V2LON,XITEMNO,DOT
          DISPLAY   *PSTDCOL01:STDROW,APCTCODE
          DISPLAY   *PSTDCOL02:STDROW,APCTDESC
          COMPARE   MAXITEM,XITEMNO
          GOTO      HAPCTA10 IF NOT EQUAL
HAPCTA15
.                                                                               
          MOVE      ONE,DITEM
          MOVE      MINITEM,DROW
          ADD       ONE,DROW
          DISPLAY   *PSTDCOL00:DROW,*V2LON,*HON,SP1,DITEM,DOT
          CLIP
          FLUSH     HLEF,HTOP,HRIG,HBOT
.
HAPCTA20
          CALL      HSCRI000
          BRANCH    EXIT,HAPCTA30,HAPCTA35,HAPCTA40,HAPCTA45,HAPCTA04:
                              HAPCTA91,HAPCTA50
          GOTO      HAPCTA92
HAPCTA30
          CALL      RKAPCT1 
          BRANCH    OVRCD,HAPCTA85
          PACK      KEY3,APCTCODE,SP70                                          
.                                                                               
.                                                                               
          CALL      RPAPCT1 
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HAPCTA10
HAPCTA35
          MOVE      ST1,KEY3 
          CALL      RDAPCT1 
          CALL      RPAPCT1 
          BRANCH    OVRCD,HAPCTA85
          PACK      KEY3,APCTCODE,SP70                                          
.                                                                               
.                                                                               
.                                                                               
.                                                                               
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          MOVE      MINITEM,STDROW
          MOVE      MAXITEM,XITEMNO
HAPCTA36
          CALL      RPAPCT1 
          BRANCH    OVRCD,HAPCTA37
          PACK      KEY3,APCTCODE,SP70                                          
.                                                                               
.                                                                               
          SUB       ONE,XITEMNO
          COMPARE   ZERO,XITEMNO
          GOTO      HAPCTA36 IF NOT EQUAL
HAPCTA37
          MOVE      ZERO,XITEMNO
          GOTO      HAPCTA10
HAPCTA40
          MOVE      ST1,KEY3 
          CALL      RDAPCT1 
          CALL      RPAPCT1 
          BRANCH    OVRCD,HAPCTA85
          PACK      KEY3,APCTCODE,SP70                                          
.                                                                               
.                                                                               
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HAPCTA08
HAPCTA45
          CALL      RKAPCT1 
          BRANCH    OVRCD,HAPCTA85
          PACK      KEY3,APCTCODE,SP70                                          
.                                                                               
.                                                                               
          SUSPEND
          CLIP      1,1,CRIG,24
.
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          MOVE      ZERO,XITEMNO
          PACK      KEY3,Z70                                                    
          MOVE      MINITEM,STDROW
          MOVE      MAXITEM,XITEMNO
          CALL      RSAPCT1 
HAPCTA46
          CALL      RPAPCT1 
          BRANCH    OVRCD,HAPCTA47
          PACK      KEY3,APCTCODE,SP70                                          
.                                                                               
.                                                                               
          SUB       ONE,XITEMNO
          COMPARE   ZERO,XITEMNO
          GOTO      HAPCTA46 IF NOT EQUAL
HAPCTA47
          MOVE      ZERO,XITEMNO
          GOTO      HAPCTA10
HAPCTA50  COMPARE   ZERO,CSEARCH
          GOTO      HAPCTA55 IF EQUAL
          MOVE      ZERO,CSEARCH
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          ADD       ONE,STDROW
          UNPACK    SP70,SCHFLD01,SCHFLD02,SCHFLD03,SCHFLD04,SCHFLD05
          UNPACK    SP70,SCHFLD06,SCHFLD07,SCHFLD08,SCHFLD09,SCHFLD10
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          DISPLAY   *PSTDCOL00:STDROW,*V2LON,*HON,"Sch"
          KEYIN     *PSTDCOL01:STDROW,*V2LON,SCHFLD01
          RESET     SCHFLD01
          KEYIN     *PSTDCOL02:STDROW,*V2LON,SCHFLD02
          RESET     SCHFLD02
          PACK      KEY8,SP70
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HAPCTA08
HAPCTA55  MOVE      ONE,CSEARCH
          PACK      KEY8,SP70
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HAPCTA08
HAPCTA60  MOVE      ZERO,OVRCD
          MATCH     SP70,SCHFLD01
          GOTO      HAPCTA61 IF EQUAL
          MATCH     SCHFLD01,APCTCODE
          GOTO      HAPCTA72 IF NOT EQUAL
HAPCTA61
          MATCH     SP70,SCHFLD02
          GOTO      HAPCTA62 IF EQUAL
          MATCH     SCHFLD02,APCTDESC
          GOTO      HAPCTA72 IF NOT EQUAL
HAPCTA62
HAPCTA63
HAPCTA64
HAPCTA65
HAPCTA66
HAPCTA67
HAPCTA68
HAPCTA69
HAPCTA70
          GOTO      HAPCTA75
HAPCTA72  MOVE      ONE,OVRCD
HAPCTA75  RETURN
HAPCTA85
          LOAD      KEY3,XITEMNO,ST1,ST2,ST3,ST4,ST5:                            
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          UNPACK    KEY3,APCTCODE                                               
          CALL      RDAPCT1 
HAPCTA90
.                                                                               
          BEEP
          GOTO      HAPCTA20
HAPCTA91
          MOVE      SP70,APCTDESC
          MOVE      SP70,APCTSPAR
          MOVE      SP70,KEY3 
          MOVE      SP70,APCTCODE
          GOTO      HAPCTA96
HAPCTA92
          MOVE      SP70,KEY3 
          MOVE      SP70,APCTCODE
          LOAD      KEY3,CCITEM,ST1,ST2,ST3,ST4,ST5:                            
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          UNPACK    KEY3,APCTCODE                                               
HAPCTA96
          PUTSCR    CSSCRNUM,HLEF,HTOP,HRIG,HBOT
          CALL      FRESCR00
          MOVE      ZERO,HTOP
          MOVE      ZERO,HLEF
          MOVE      ZERO,HBOT
          MOVE      ZERO,HRIG
HAPCTA99
          RETURN
