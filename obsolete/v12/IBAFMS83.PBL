          CALL      HITENTER
          GOTO      GBTY0000
.
GBTY8100  DISPLAY   *P1:24,*EL,"Budget Stat File ",BUDFILE," Not Available - ";
          CALL      HITENTER
          GOTO      GBTY0000
.
GBTY8500  DISPLAY   *P1:24,*EL,"Budget File Locked. No Maintenance Allowed - ";
          CALL      HITENTER
          GOTO      GBTY0000
.
