          MOVE      ONE,POSTFLAG
          PACK      KEY14,FMLALEDG,FMAMACCT
          MOVE      FMLALEDG,FMBUCULD               * set up file variables
          MOVE      FMAMACCT,FMBUCUAC
          MOVE      FMBPCODE,FMBUCUPR
.
          CALL      RAFMBU1                         * is record already there?
          BRANCH    OVRCD,POST1000
.
          CALL      UPBUD000                        * Update the budget & audit
          GOTO      POST2000
.
POST1000  MOVE      ONE,AUDTTYPE
          CALL      WAFMBU00                        * Write to audit file
          CALL      WRFMBU1                         * no - write it
.
POST2000  COMPARE   ONE,FMCOCALC
          GOTO      POST9999 IF NOT EQUAL
.
          MOVE      FMBUCULD,LEDGER               * set up file variables
          MOVE      FMBUCUAC,ACCOUNT
          PACK      UTYPE,BUDTYPE,SP70
          PROC      FMSUA000           * set for update
.
POST9999  RETURN
.*************************************************************************
.* DBUD - Display the budget that is on file for these parametres        *
.*        Requires a valid record to have been read                      *
.*                     called by : PROC1000                              *
.*************************************************************************
DBUD0000  PACK      KEY9,FMBUCULD,FMLACYRR,FMBUCUPR
          MOVE      SP70,FMBPDESC
          CALL      RDFMBP1           * get profile description
          DISPLAY   *P28:8,*V2LON,FMBUCUPR,*HOFF,*P41:8,FMBPDESC
          BRANCH    OVRCD,DBUD0500
          MOVE      ZERO,POSTFLAG
          GOTO      DBUD0600
.
DBUD0500  MOVE      ONE,POSTFLAG
.
DBUD0600  MOVE      ZERO,CCITEM
          MOVE      NINE,CVERT
.
.** Calculate the annual budget as we display the budget for each period
.
          MOVE      ZERO,ANBUDGET
DBUD1000  ADD       ONE,CCITEM
          ADD       ONE,CVERT
.
          LOAD      FORM12P4,CCITEM,FMBUCA01,FMBUCA02,FMBUCA03,FMBUCA04:
                                    FMBUCA05,FMBUCA06,FMBUCA07,FMBUCA08:
                                    FMBUCA09,FMBUCA10,FMBUCA11,FMBUCA12:
                                    FMBUCA13
.
          LOAD      FORM4P2,CCITEM,FMBPPC1,FMBPPC2,FMBPPC3,FMBPPC4:
                                   FMBPPC5,FMBPPC6,FMBPPC7,FMBPPC8:
                                   FMBPPC9,FMBPPC10,FMBPPC11,FMBPPC12:
                                   FMBPPC13
.
          MOVE      FORM12P4,FORM12P2
          BRANCH    POSTFLAG,DBUD2000
          DISPLAY   *P28:CVERT,*V2LON,FORM12P2,*HOFF,*P45:CVERT,FORM4P2,"%"
          GOTO      DBUD3000
.
DBUD2000  DISPLAY   *P28:CVERT,*V2LON,FORM12P2
.
DBUD3000  ADD       FORM12P4,ANBUDGET
          COMPARE   NOPERD,CCITEM   * done all periods?
          GOTO      DBUD1000 IF NOT EQUAL
.
          DISPLAY   *P28:9,*V2LON,ANBUDGET
.
DBUD9999  RETURN
.*************************************************************************
.* DEL - OK to delete the budget for this account? - and delete it       *
.*                     called by : PROC2000                              *
.*************************************************************************
DEL0000   CALL      DELQST           * ok to delete
          BRANCH    CEXIT,DEL1000,DEL8000,DEL9000
.
DEL1000   DISPLAY   *P50:24,*V2LON,*BLINKON,"*** Deleting ***"
          PACK      KEY14,FMBUCULD,FMBUCUAC
          MOVE      FOUR,AUDTTYPE
          CALL      WAFMBU00
          CALL      DEFMBU1
          MOVE      ZERO,EXIT
          MOVE      ONE,POSTFLAG   * we want to go back to account prompt
.
          COMPARE   ONE,FMCOCALC
          GOTO      DEL9999 IF NOT EQUAL
.
          MOVE      FMBUCULD,LEDGER               * set up file variables
          MOVE      FMBUCUAC,ACCOUNT
          PACK      UTYPE,BUDTYPE,SP70
          PROC      FMSUA000           * set for update
          GOTO      DEL9999
.
DEL8000 
          MOVE      ONE,POSTFLAG   * we want to go back to account prompt
          GOTO      DEL9999
.
DEL9000   MOVE      TWO,EXIT
.
DEL9999   RETURN
