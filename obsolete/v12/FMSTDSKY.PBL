.---------------------------------------------------------------------------
.   System    :   Financial Management System        
.   Include   :   FMSTDSKY
.   Routine   :   HFMTDA00 Transaction Desc.   
.   Return    :           
.-------------------------------------------------------------------------------
HFMTDA00
          MOVE      ZERO,CSCRSIZ
          IF        HTOP<3
            MOVE      "10",HTOP
            MOVE      "24",HBOT
            MOVE      "40",HLEF
            MOVE      "80",HRIG
          ENDIF
HFMTDA04
          CALL      GSCRN000
          BRANCH    EXIT,HFMTDA99
          MOVE      STDCOL00,STDCOL01
          ADD       " 5",STDCOL01
          DISPLAY   *PSTDCOL01:STDROW,*V2LON,*ULON,"Code"               
.
          MOVE      STDCOL01,STDCOL02
          ADD       " 5",STDCOL02
          DISPLAY   *PSTDCOL02:STDROW,*V2LON,*ULON,"Description"        
.
          MOVE      STDCOL02,STDCOL03
          ADD       "30",STDCOL03
HFMTDA08
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          MOVE      SP70,FMTDCODE
          PACK      KEY4,FMTDCODE,SP70                                          
.                                                                               
.                                                                               
          CALL      RSFMTD1 
HFMTDA10
          CALL      RKFMTD1 
          BRANCH    OVRCD,HFMTDA15
          PACK      KEY4,FMTDCODE,SP70                                          
.                                                                               
.                                                                               
          BRANCH    CSEARCH,HFMTDA12
          CALL      HFMTDA60
          BRANCH    OVRCD,HFMTDA10
HFMTDA12
          ADD       ONE,XITEMNO
          ADD       ONE,STDROW
          STORE     KEY4,XITEMNO,ST1,ST2,ST3,ST4,ST5:                            
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          DISPLAY   *PSTDCOL00:STDROW,SP1,*V2LON,XITEMNO,DOT
          DISPLAY   *PSTDCOL01:STDROW,FMTDCODE
          DISPLAY   *PSTDCOL02:STDROW,FMTDDESC
          COMPARE   MAXITEM,XITEMNO
          GOTO      HFMTDA10 IF NOT EQUAL
HFMTDA15
.                                                                               
          MOVE      ONE,DITEM
          MOVE      MINITEM,DROW
          ADD       ONE,DROW
          DISPLAY   *PSTDCOL00:DROW,*V2LON,*HON,SP1,DITEM,DOT
          CLIP
          FLUSH     HLEF,HTOP,HRIG,HBOT
.
HFMTDA20
          CALL      HSCRI000
          BRANCH    EXIT,HFMTDA30,HFMTDA35,HFMTDA40,HFMTDA45,HFMTDA04:
                              HFMTDA91,HFMTDA50
          GOTO      HFMTDA92
HFMTDA30
          CALL      RKFMTD1 
          BRANCH    OVRCD,HFMTDA85
          PACK      KEY4,FMTDCODE,SP70                                          
.                                                                               
.                                                                               
          CALL      RPFMTD1 
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HFMTDA10
HFMTDA35
          MOVE      ST1,KEY4 
          CALL      RDFMTD1 
          CALL      RPFMTD1 
          BRANCH    OVRCD,HFMTDA85
          PACK      KEY4,FMTDCODE,SP70                                          
.                                                                               
.                                                                               
.                                                                               
.                                                                               
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          MOVE      MINITEM,STDROW
          MOVE      MAXITEM,XITEMNO
HFMTDA36
          CALL      RPFMTD1 
          BRANCH    OVRCD,HFMTDA37
          PACK      KEY4,FMTDCODE,SP70                                          
.                                                                               
.                                                                               
          SUB       ONE,XITEMNO
          COMPARE   ZERO,XITEMNO
          GOTO      HFMTDA36 IF NOT EQUAL
HFMTDA37
          MOVE      ZERO,XITEMNO
          GOTO      HFMTDA10
HFMTDA40
          MOVE      ST1,KEY4 
          CALL      RDFMTD1 
          CALL      RPFMTD1 
          BRANCH    OVRCD,HFMTDA85
          PACK      KEY4,FMTDCODE,SP70                                          
.                                                                               
.                                                                               
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HFMTDA08
HFMTDA45
          CALL      RKFMTD1 
          BRANCH    OVRCD,HFMTDA85
          PACK      KEY4,FMTDCODE,SP70                                          
.                                                                               
.                                                                               
          SUSPEND
          CLIP      1,1,CRIG,24
.
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          MOVE      ZERO,XITEMNO
          PACK      KEY4,Z70                                                    
          MOVE      MINITEM,STDROW
          MOVE      MAXITEM,XITEMNO
          CALL      RSFMTD1 
HFMTDA46
          CALL      RPFMTD1 
          BRANCH    OVRCD,HFMTDA47
          PACK      KEY4,FMTDCODE,SP70                                          
.                                                                               
.                                                                               
          SUB       ONE,XITEMNO
          COMPARE   ZERO,XITEMNO
          GOTO      HFMTDA46 IF NOT EQUAL
HFMTDA47
          MOVE      ZERO,XITEMNO
          GOTO      HFMTDA10
HFMTDA50  COMPARE   ZERO,CSEARCH
          GOTO      HFMTDA55 IF EQUAL
          MOVE      ZERO,CSEARCH
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          ADD       ONE,STDROW
          UNPACK    SP70,SCHFLD01,SCHFLD02,SCHFLD03,SCHFLD04,SCHFLD05
          UNPACK    SP70,SCHFLD06,SCHFLD07,SCHFLD08,SCHFLD09,SCHFLD10
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          DISPLAY   *PSTDCOL00:STDROW,*V2LON,*HON,"Sch"
          KEYIN     *PSTDCOL01:STDROW,*V2LON,SCHFLD01
          RESET     SCHFLD01
          KEYIN     *PSTDCOL02:STDROW,*V2LON,SCHFLD02
          RESET     SCHFLD02
          PACK      KEY8,SP70
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HFMTDA08
HFMTDA55  MOVE      ONE,CSEARCH
          PACK      KEY8,SP70
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HFMTDA08
HFMTDA60  MOVE      ZERO,OVRCD
          MATCH     SP70,SCHFLD01
          GOTO      HFMTDA61 IF EQUAL
          MATCH     SCHFLD01,FMTDCODE
          GOTO      HFMTDA72 IF NOT EQUAL
HFMTDA61
          MATCH     SP70,SCHFLD02
          GOTO      HFMTDA62 IF EQUAL
          MATCH     SCHFLD02,FMTDDESC
          GOTO      HFMTDA72 IF NOT EQUAL
HFMTDA62
HFMTDA63
HFMTDA64
HFMTDA65
HFMTDA66
HFMTDA67
HFMTDA68
HFMTDA69
HFMTDA70
          GOTO      HFMTDA75
HFMTDA72  MOVE      ONE,OVRCD
HFMTDA75  RETURN
HFMTDA85
          LOAD      KEY4,XITEMNO,ST1,ST2,ST3,ST4,ST5:                            
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          UNPACK    KEY4,FMTDCODE                                               
          CALL      RDFMTD1 
HFMTDA90
.                                                                               
          BEEP
          GOTO      HFMTDA20
HFMTDA91
          MOVE      SP70,FMTDDESC
          MOVE      SP70,KEY4 
          MOVE      SP70,FMTDCODE
          GOTO      HFMTDA96
HFMTDA92
          MOVE      SP70,KEY4 
          MOVE      SP70,FMTDCODE
          LOAD      KEY4,CCITEM,ST1,ST2,ST3,ST4,ST5:                            
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          UNPACK    KEY4,FMTDCODE                                               
HFMTDA96
          PUTSCR    CSSCRNUM,HLEF,HTOP,HRIG,HBOT
          CALL      FRESCR00
          MOVE      ZERO,HTOP
          MOVE      ZERO,HLEF
          MOVE      ZERO,HBOT
          MOVE      ZERO,HRIG
HFMTDA99
          RETURN
.---------------------------------------------------------------------------
.   System    :   Financial Management System        
.   Include   :   FMSTDSKY
.   Routine   :   KFMTDA00 Keyin Transaction         
.   Parameter :   CKEYTYP 0 = Keyin , 1 = Accept, 2 = Either
.   Return    :   EXIT = 1 null entry, 2 EXITCHAR entered
.-------------------------------------------------------------------------------
KFMTDA00 TOPIC     "FMTDCODE"
          MOVE      UNDLN70,FMTDCODE
          KEYIN     *PCCOL:CVERT,*DV,FMTDCODE:                                  
                    *PCCOL:CVERT,*V2LON,FMTDCODE:                               
                    *PCCOL:CVERT,*DV,FMTDCODE
.
          ENDSET    FMTDCODE
          APPEND    SP70,FMTDCODE
          RESET     FMTDCODE
.
          MATCH     SP70,FMTDCODE
          GOTO      KFMTDA90 IF EQUAL
.
          CMATCH    EXITCHAR,FMTDCODE
          GOTO      KFMTDA95 IF EQUAL
.
          CMATCH    QUEST,FMTDCODE
          GOTO      KFMTDA10 IF NOT EQUAL
.
          MOVE      CCITEM,SCCITEM
          CALL      HFMTDA00
          MOVE      SCCITEM,CCITEM
.
          ENDSET    FMTDCODE
          APPEND    SP70,FMTDCODE
          RESET     FMTDCODE
.
          MATCH     SP70,FMTDCODE
          GOTO      KFMTDA00 IF EQUAL
.
          DISPLAY   *PCCOL:CVERT,*V2LON,FMTDCODE                                
KFMTDA10
          PACK      KEY4,FMTDCODE                                               
          CALL      RAFMTD1 
          BRANCH    OVRCD,KFMTDA80
          BRANCH    CKEYTYP,KFMTDA75
          CALL      RDFMTD1 
KFMTDA70
          MOVE      ZERO,EXIT
          GOTO      KFMTDA99
KFMTDA75
          MOVE      "Transaction Already Exists - ",DISPMSG                                           
          CALL      MESSAGE1
          GOTO      KFMTDA00
KFMTDA80
          MOVE      ZERO,EXIT
          BRANCH    CKEYTYP,KFMTDA99,KFMTDA99
          MOVE      "Transaction Does Not Exist - ",DISPMSG                                          
          CALL      MESSAGE1
          GOTO      KFMTDA00
KFMTDA90
          MOVE      ONE,EXIT
          GOTO      KFMTDA99
KFMTDA95
          MOVE      TWO,EXIT
KFMTDA99 TOPIC    PRGID
          RETURN
