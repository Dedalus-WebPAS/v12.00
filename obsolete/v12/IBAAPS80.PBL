. PRNT - print report for FMAM                      Called by ML
.         Requires : FROMLAB,TOLAB   (print range display labels)
.                    FROMDESC,TODESC (print range description labels)
.                    FROMCO14,TOCO14 (print range)
.         Returns  : EXIT            (1=illegal range entered)
.********************************************************************
PRNT0000
          PACK      DISPMSG,SP70,SP70            * save line 24
          CALL      MESSAGE2
.
          MATCH     FROMCO14,TOCO14              * check range
          IF        @LESS
            DISPLAY   *P1:24,*B,*EF,"Illegal Range of Accounts - ";
            CALL      HITENTER
            GOTO      PRNT9500
          ENDIF
.
          CLEAR     KEY8
          APPEND    "fmsb",KEY8
          APPEND    BUDGCODE,KEY8
          RESET     KEY8
          PACK      KEY8,KEY8,SP70
          REP       " 0",KEY8
          MOVE      ZERO,OVRCD
          TRAP      OVERCOND IF IO
          OPEN      FMSBUDA1,KEY8
          TRAPCLR   IO
          IF        OVRCD=1
            DISPLAY   *P1:24,*B,*EF,"Budget Master File ",KEY8," Missing - ";
            CALL      HITENTER
            GOTO      PRNT9500
          ENDIF
.
          DISPLAY   *P1:24,"Printing :   ";
          MOVE      ZERO,CPAGENO                 * reset page no.
          CLOCK     TIME,CTIMEIS                 * get current time
          MOVE      "999",CLNO                   * init last line number
.
          CALL      FILE0000                    * go to correct position in file
.
PRNT1000  CALL      NREC0000                     * get next record
          BRANCH    OVRCD,PRNT8000               * end of file ?
.
          DISPLAY   *P12:24,*V2LON,FMAMLEDG,SLASH,FMAMACCT,*EL;
.
          CALL      WRIT0000                     * print details
          GOTO      PRNT1000                     * get next record
.
PRNT8000  COMPARE   ZERO,CPAGENO
          CALL      HEAD0000 IF EQUAL          * print header if nothing printed
          CALL      UND132                       * print line
          PRINT     "****   End of Report   ****"
.
.
PRNT9000  MOVE      ZERO,EXIT                    * exit screen
          GOTO      PRNT9999
.
PRNT9500  MOVE      ONE,EXIT                     * continue
.
PRNT9999
          CALL      MESSAGE3                     * restore line 24
          RETURN
