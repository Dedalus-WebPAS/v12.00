.---------------------------------------------------------------------------
.   System    :   Accounts Payable System            
.   Include   :   APSPPDKY
.   Routine   :   HAPPPA00 Term Code           
.   Return    :           
.-------------------------------------------------------------------------------
HAPPPA00
          MOVE      ZERO,CSCRSIZ
          IF        HTOP<3
            MOVE      "10",HTOP
            MOVE      "24",HBOT
            MOVE      "40",HLEF
            MOVE      "80",HRIG
          ENDIF
HAPPPA04
          CALL      GSCRN000
          BRANCH    EXIT,HAPPPA99
          MOVE      STDCOL00,STDCOL01
          ADD       " 5",STDCOL01
          DISPLAY   *PSTDCOL01:STDROW,*V2LON,*ULON,"Code"               
.
          MOVE      STDCOL01,STDCOL02
          ADD       " 5",STDCOL02
          DISPLAY   *PSTDCOL02:STDROW,*V2LON,*ULON,"Description"        
.
          MOVE      STDCOL02,STDCOL03
          ADD       "35",STDCOL03
HAPPPA08
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          MOVE      SP70,APPPTER 
          PACK      KEY2,APPPTER,SP70                                           
.                                                                               
.                                                                               
          CALL      RSAPPP1 
HAPPPA10
          CALL      RKAPPP1 
          BRANCH    OVRCD,HAPPPA15
          PACK      KEY2,APPPTER,SP70                                           
.                                                                               
.                                                                               
          BRANCH    CSEARCH,HAPPPA12
          CALL      HAPPPA60
          BRANCH    OVRCD,HAPPPA10
HAPPPA12
          ADD       ONE,XITEMNO
          ADD       ONE,STDROW
          STORE     KEY2,XITEMNO,ST1,ST2,ST3,ST4,ST5:                            
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          DISPLAY   *PSTDCOL00:STDROW,SP1,*V2LON,XITEMNO,DOT
          DISPLAY   *PSTDCOL01:STDROW,APPPTER 
          DISPLAY   *PSTDCOL02:STDROW,APPPDES 
          COMPARE   MAXITEM,XITEMNO
          GOTO      HAPPPA10 IF NOT EQUAL
HAPPPA15
.                                                                               
          MOVE      ONE,DITEM
          MOVE      MINITEM,DROW
          ADD       ONE,DROW
          DISPLAY   *PSTDCOL00:DROW,*V2LON,*HON,SP1,DITEM,DOT
          CLIP
          FLUSH     HLEF,HTOP,HRIG,HBOT
.
HAPPPA20
          CALL      HSCRI000
          BRANCH    EXIT,HAPPPA30,HAPPPA35,HAPPPA40,HAPPPA45,HAPPPA04:
                              HAPPPA91,HAPPPA50
          GOTO      HAPPPA92
HAPPPA30
          CALL      RKAPPP1 
          BRANCH    OVRCD,HAPPPA85
          PACK      KEY2,APPPTER,SP70                                           
.                                                                               
.                                                                               
          CALL      RPAPPP1 
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HAPPPA10
HAPPPA35
          MOVE      ST1,KEY2 
          CALL      RDAPPP1 
          CALL      RPAPPP1 
          BRANCH    OVRCD,HAPPPA85
          PACK      KEY2,APPPTER,SP70                                           
.                                                                               
.                                                                               
.                                                                               
.                                                                               
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          MOVE      MINITEM,STDROW
          MOVE      MAXITEM,XITEMNO
HAPPPA36
          CALL      RPAPPP1 
          BRANCH    OVRCD,HAPPPA37
          PACK      KEY2,APPPTER,SP70                                           
.                                                                               
.                                                                               
          SUB       ONE,XITEMNO
          COMPARE   ZERO,XITEMNO
          GOTO      HAPPPA36 IF NOT EQUAL
HAPPPA37
          MOVE      ZERO,XITEMNO
          GOTO      HAPPPA10
HAPPPA40
          MOVE      ST1,KEY2 
          CALL      RDAPPP1 
          CALL      RPAPPP1 
          BRANCH    OVRCD,HAPPPA85
          PACK      KEY2,APPPTER,SP70                                           
.                                                                               
.                                                                               
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HAPPPA08
HAPPPA45
          CALL      RKAPPP1 
          BRANCH    OVRCD,HAPPPA85
          PACK      KEY2,APPPTER,SP70                                           
.                                                                               
.                                                                               
          SUSPEND
          CLIP      1,1,CRIG,24
.
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          MOVE      ZERO,XITEMNO
          PACK      KEY2,Z70                                                    
          MOVE      MINITEM,STDROW
          MOVE      MAXITEM,XITEMNO
          CALL      RSAPPP1 
HAPPPA46
          CALL      RPAPPP1 
          BRANCH    OVRCD,HAPPPA47
          PACK      KEY2,APPPTER,SP70                                           
.                                                                               
.                                                                               
          SUB       ONE,XITEMNO
          COMPARE   ZERO,XITEMNO
          GOTO      HAPPPA46 IF NOT EQUAL
HAPPPA47
          MOVE      ZERO,XITEMNO
          GOTO      HAPPPA10
HAPPPA50  COMPARE   ZERO,CSEARCH
          GOTO      HAPPPA55 IF EQUAL
          MOVE      ZERO,CSEARCH
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          ADD       ONE,STDROW
          UNPACK    SP70,SCHFLD01,SCHFLD02,SCHFLD03,SCHFLD04,SCHFLD05
          UNPACK    SP70,SCHFLD06,SCHFLD07,SCHFLD08,SCHFLD09,SCHFLD10
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          DISPLAY   *PSTDCOL00:STDROW,*V2LON,*HON,"Sch"
          KEYIN     *PSTDCOL01:STDROW,*V2LON,SCHFLD01
          RESET     SCHFLD01
          KEYIN     *PSTDCOL02:STDROW,*V2LON,SCHFLD02
          RESET     SCHFLD02
          PACK      KEY8,SP70
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HAPPPA08
HAPPPA55  MOVE      ONE,CSEARCH
          PACK      KEY8,SP70
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HAPPPA08
HAPPPA60  MOVE      ZERO,OVRCD
          MATCH     SP70,SCHFLD01
          GOTO      HAPPPA61 IF EQUAL
          MATCH     SCHFLD01,APPPTER 
          GOTO      HAPPPA72 IF NOT EQUAL
HAPPPA61
          MATCH     SP70,SCHFLD02
          GOTO      HAPPPA62 IF EQUAL
          MATCH     SCHFLD02,APPPDES 
          GOTO      HAPPPA72 IF NOT EQUAL
HAPPPA62
HAPPPA63
HAPPPA64
HAPPPA65
HAPPPA66
HAPPPA67
HAPPPA68
HAPPPA69
HAPPPA70
          GOTO      HAPPPA75
HAPPPA72  MOVE      ONE,OVRCD
HAPPPA75  RETURN
HAPPPA85
          LOAD      KEY2,XITEMNO,ST1,ST2,ST3,ST4,ST5:                            
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          UNPACK    KEY2,APPPTER                                                
          CALL      RDAPPP1 
HAPPPA90
.                                                                               
          BEEP
          GOTO      HAPPPA20
HAPPPA91
          MOVE      SP70,APPPDES 
          MOVE      ZERO,APPPTYP 
          MOVE      ZERO,APPPDA1 
          MOVE      ZERO,APPPPE1 
          MOVE      ZERO,APPPDA2 
          MOVE      ZERO,APPPPE2 
          MOVE      ZERO,APPPDA3 
          MOVE      ZERO,APPPPE3 
          MOVE      SP70,APPPSPA 
          MOVE      SP70,KEY2 
          MOVE      SP70,APPPTER 
          GOTO      HAPPPA96
HAPPPA92
          MOVE      SP70,KEY2 
          MOVE      SP70,APPPTER 
          LOAD      KEY2,CCITEM,ST1,ST2,ST3,ST4,ST5:                            
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          UNPACK    KEY2,APPPTER                                                
HAPPPA96
          PUTSCR    CSSCRNUM,HLEF,HTOP,HRIG,HBOT
          CALL      FRESCR00
          MOVE      ZERO,HTOP
          MOVE      ZERO,HLEF
          MOVE      ZERO,HBOT
          MOVE      ZERO,HRIG
HAPPPA99
          RETURN
.---------------------------------------------------------------------------
.   System    :   Accounts Payable System            
.   Include   :   APSPPDKY
.   Routine   :   KAPPPA00 Keyin Terms               
.   Parameter :   CKEYTYP 0 = Keyin , 1 = Accept, 2 = Either
.   Return    :   EXIT = 1 null entry, 2 EXITCHAR entered
.-------------------------------------------------------------------------------
KAPPPA00 TOPIC     "APPPTER "
          MOVE      UNDLN70,APPPTER 
          KEYIN     *PCCOL:CVERT,*DV,APPPTER:                                   
                    *PCCOL:CVERT,*V2LON,APPPTER:                                
                    *PCCOL:CVERT,*DV,APPPTER 
.
          ENDSET    APPPTER 
          APPEND    SP70,APPPTER 
          RESET     APPPTER 
.
          MATCH     SP70,APPPTER 
          GOTO      KAPPPA90 IF EQUAL
.
          CMATCH    EXITCHAR,APPPTER 
          GOTO      KAPPPA95 IF EQUAL
.
          CMATCH    QUEST,APPPTER 
          GOTO      KAPPPA10 IF NOT EQUAL
.
          MOVE      CCITEM,SCCITEM
          CALL      HAPPPA00
          MOVE      SCCITEM,CCITEM
.
          ENDSET    APPPTER 
          APPEND    SP70,APPPTER 
          RESET     APPPTER 
.
          MATCH     SP70,APPPTER 
          GOTO      KAPPPA00 IF EQUAL
.
          DISPLAY   *PCCOL:CVERT,*V2LON,APPPTER                                 
KAPPPA10
          PACK      KEY2,APPPTER                                                
          CALL      RAAPPP1 
          BRANCH    OVRCD,KAPPPA80
          BRANCH    CKEYTYP,KAPPPA75
          CALL      RDAPPP1 
KAPPPA70
          MOVE      ZERO,EXIT
          GOTO      KAPPPA99
KAPPPA75
          MOVE      "Terms Already Exist - ",DISPMSG                                                 
          CALL      MESSAGE1
          GOTO      KAPPPA00
KAPPPA80
          MOVE      ZERO,EXIT
          BRANCH    CKEYTYP,KAPPPA99,KAPPPA99
          MOVE      "Terms Does Not Exist - ",DISPMSG                                                
          CALL      MESSAGE1
          GOTO      KAPPPA00
KAPPPA90
          MOVE      ONE,EXIT
          GOTO      KAPPPA99
KAPPPA95
          MOVE      TWO,EXIT
KAPPPA99 TOPIC    PRGID
          RETURN
