.******************************************************************************
.* System    :   Inpatients                                                   *
.* Program   :   F95PTPRS                                                     *
.* Desc      :   Fix PRS2 tables for multi hospital mods                      *
.******************************************************************************
.* Date      :   08/04/2006                                                   *
.* Author    :   Jill Habasque                                                *
.* Function  :   This program will fix patptdaf,patmtdaf and patytdaf         *
.* Mods      :                                                                *
.*                                                                            *
.*    V10.04.01  31/12/2013  Don Nguyen          CAR 294451                   *
.*               Recompiled for changes to PATYTDFD and PATYTDIO              *
.*               31/12/2013  Don Nguyen          CAR 294446                   *
.*               Recompiled for changes to PATMTDFD and PATMTDIO              *
.******************************************************************************
.
          INC       STD001FD
.
. FILE DESCRIPTION INCLUDES
. -------------------------
          INC       PMSVX1FD/INC
          INC       PATHSPFD/INC
          INC       PATPTDFD/INC
          INC       PRSDTLFD/INC
          INC       PATMTDFD/INC
          INC       PATYTDFD/INC 
          INC       PRSHRDFD/INC 
.
. LOCAL VARIABLE DEFINITION
. -------------------------
DIM5      DIM       5
YEARNAME  INIT      "patytd"
.
PRGID     INIT      "F95PTPRS"
PRGNAM    INIT      "Fix prs2 tables              "
VERSION   INIT      "V12.00.00"
+
.**************************************************************************
.*                              ML0000                                    *
.*                      Controlling Logic (Mainline code)                 *
.**************************************************************************
.
ML0000    CALL      INIT0000               * initialisation and open files
.
ML0100    CALL      OPTN0000               * select options
          BRANCH    EXIT,ML9999            * EXIT = 1 if 0 chosen in menu
          BRANCH    COPTION,ML1000,ML1000: * proceed with clean up
                            ML1000,ML1000,ML1000
.
ML1000    CALL      CONTQST                * Ok to continue ?
          BRANCH    CEXIT,ML2000:          * yes
                          ML0100:          * no
                          ML0100           * cancel
.
ML2000    BRANCH    COPTION,ML3000,ML4000: * proceed with clean up
                            ML5000,ML6000,ML7000
.
ML3000    CALL      PROP0000               * process patptdaf
          GOTO      ML0100
.
ML4000    CALL      PROM0000               * process patmtdaf
          GOTO      ML0100
.
ML5000    CALL      PROY0000               * process patytdaf
          OPEN      PATYTDA1,"patytd04"
          CALL      PROY0000
          OPEN      PATYTDA1,"patytd05"
          CALL      PROY0000
          GOTO      ML0100
.
ML6000    CALL      PROH0000               * process prshdraf
          GOTO      ML0100
.
ML7000    CALL      PROD0000               * process prsdtlaf
          GOTO      ML0100
.
ML9999    CHAIN     PGM                    * chain back to program
+
.****************************************************************************
.*                                INIT0000             Called by: ML0000    *
.*                             initialisation                               *
.*  The initialisation routine is used to display headings and open files.  *
.****************************************************************************
.
INIT0000  CALL      DISPHEAD                  * display heading
.
          OPEN      PMSVX1A1,"pmsvx1af"
          OPEN      PATPTDA1,"patptdaf"
          OPEN      PATMTDA1,"patmtdaf"
          OPEN      PATYTDA1,"patytdaf"
          OPEN      PATHSPA1,"pathspaf"
          OPEN      PRSHRDA1,"prshrdaf"
          OPEN      PRSDTLA1,"prsdtlaf"
          OPEN      PRSDTLA1,"prsdtlaf"
.
INIT9999  RETURN
+
.****************************************************************************
.*                                OPTN0000             Called by: ML0000    *
.*                        get user options or exit                          *
.*                                                                          *
.*    Returns:  EXIT    = FALSE (0)  Run clean up                           *
.*                        TRUE  (1)  Exit option selected                   *
.****************************************************************************
.
OPTN0000  DISPLAY   *P1:3,*EF,*P1:4,*V2LON,ZERO,*HOFF,". Exit":
                    *P1:5,*V2LON,ONE,*HOFF,". Fix patptdaf":
                    *P1:6,*V2LON,TWO,*HOFF,". Fix patmtdaf":
                    *P1:7,*V2LON,THREE,*HOFF,". Fix patytdaf" :
                    *P1:8,*V2LON,FOUR,*HOFF,". Fix prshrdaf":
                    *P1:9,*V2LON,FIVE,*HOFF,". Fix prsdtlaf"
.
OPTN0500  KEYIN     *P1:11,*EL,"Select Option : ",*DV,UNDLN1:
                    *P17:11,*V2LON,COPTION
.
          COMPARE   ZERO,COPTION                 * exit selected ?
          GOTO      OPTN9500 IF EQUAL            * yes
.
          BRANCH    COPTION,OPTN9000,OPTN9000:   * run clean-up
                            OPTN9000,OPTN9000,OPTN9000
.
          BEEP
          GOTO      OPTN0500
.
OPTN9000  MOVE      ZERO,EXIT
          GOTO      OPTN9999
.
OPTN9500  MOVE      ONE,EXIT
.
OPTN9999  RETURN
+
.**************************************************************************
.*                               PROP0000              Called by: ML0000  *
.*                                                                        *
.**************************************************************************
.
PROP0000  PACK      KEY8,SP70
          CALL      RSPTPTD1
PROP1000  CALL      RKPTPTD1
          BRANCH    OVRCD,PROP9999
.
          PACK      KEY8,DPTPDADM,SP70
          CALL      RDPMVX11
          BRANCH    OVRCD,PROP1000
.
          PACK      PTPDHOSP,PMVXMHOS
          CALL      UPPTPTD1
          GOTO      PROP1000
.
PROP9999  RETURN
+
.**************************************************************************
.*                               PROM0000              Called by: ML0000  *
.*                                                                        *
.**************************************************************************
.
PROM0000  PACK      KEY8,SP70
          CALL      RSPTMTD1
PROM1000  CALL      RKPTMTD1
          BRANCH    OVRCD,PROM9999
.
          PACK      KEY8,DPTMDADM,SP70
          CALL      RDPMVX11
          BRANCH    OVRCD,PROM1000
.
          PACK      PTMDHOSP,PMVXMHOS
          CALL      UPPTMTD1
          GOTO      PROM1000
.
PROM9999  RETURN
+
.**************************************************************************
.*                               PROY0000              Called by: ML0000  *
.*                                                                        *
.**************************************************************************
.
PROY0000  PACK      KEY8,SP70
          CALL      RSPTYTD1
PROY1000  CALL      RKPTYTD1
          BRANCH    OVRCD,PROY9999
.
          PACK      KEY8,DPTYDADM,SP70
          CALL      RDPMVX11
          BRANCH    OVRCD,PROY1000
.
          PACK      PTYDHOSP,PMVXMHOS
          CALL      UPPTYTD1
          GOTO      PROY1000
.
PROY9999  RETURN
+
.**************************************************************************
.*                               PROH0000              Called by: ML0000  *
.*                                                                        *
.**************************************************************************
.
PROH0000  MOVE      TEN,CVERT
          DISPLAY   *P1:CVERT,*EL,"Hospital Id : ";
.
          MOVE      TEN5,ECOL
          MOVE      CVERT,EVERT
          MOVE      SP3,CKYIDEF3
          MOVE      ZERO,CKYIMAND           * Not Mandatory
          OPEN      PATHSPA1,"pathspaf"
.
          CALL      PATHSPKY
          BRANCH    EXIT,PROH0000,PROH9999
.
          PACK      KEY8,SP70
          CALL      RSP2HRD1
PROH1000  CALL      RKP2HRD1
          BRANCH    OVRCD,PROH9999
.
          MOVE      PTHSHOSP,P2HRHOSP
          CALL      UPP2HRD1
          GOTO      PROH1000
.
PROH9999  RETURN
+
.**************************************************************************
.*                               PROD0000              Called by: ML0000  *
.*                                                                        *
.**************************************************************************
.
PROD0000  PACK      KEY8,SP70
          CALL      RSP2DTL1
PROD1000  CALL      RKP2DTL1
          BRANCH    OVRCD,PROD9999
.
          PACK      KEY8,P2DTADMN,SP70
          CALL      RDPMVX11
          BRANCH    OVRCD,PROD1000
.
          PACK      P2DTHOSP,PMVXMHOS
          CALL      UPP2DTL1
          GOTO      PROD1000
.
PROD9999  RETURN
+
. =========================================================================
.         I/O Includes
. =========================================================================
.
          INC       STD001IO
.
          INC       PATHSPKY
          INC       PMSVX1IO/INC
          INC       PATHSPIO/INC
          INC       PRSHRDIO/INC
          INC       PRSDTLIO/INC
          INC       PATPTDIO/INC
          INC       PATMTDIO/INC
          INC       PATYTDIO/INC
