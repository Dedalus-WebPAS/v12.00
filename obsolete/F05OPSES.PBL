.**********************************************************************
.*                               READ0000                             *
.*             loop thru old file and write each record               *
.**********************************************************************
READ0000  DISPLAY   *P1:20,*EL,"Record No. : ";
.
          PACK      KEY19,SP60
          CALL      READSOLD                      * position at start
READ1000  CALL      READKOLD                      * read next record
          BRANCH    OVRCD,READ6000                * no more records
.
          ADD       ONE,RECNUM                    * update record counter
          ADD       ONE,DISNUM                    * Display counter
.
          IF        DISNUM = 5000 | RECNUM = 1
            MOVE      ZERO,DISNUM
            DISPLAY   *P15:20,*V2LON,RECNUM
          ENDIF
.
          MOVE      SP70,OPSECNDT
          MOVE      SP70,OPSECNTM
          MOVE      SP70,OPSECNID
          MOVE      SP70,OPSEDTCM
          MOVE      SP70,OPSEUCDT
          MOVE      SP70,OPSEDCDT
          MOVE      SP70,OPSETCDT
          MOVE      SP70,OPSEUUDT
          MOVE      SP70,OPSEDUDT
          MOVE      SP70,OPSETUDT
          MOVE      SP70,OPSESPAR
.                                               * Pack key here
          PACK      KEY19,OPSEAUDD,OPSEAUDT,OPSEAUDP,OPSEAUDR,SP70
          CALL      AWOPSES                     * write to new file
.
          GOTO      READ1000                      * get next record
.
READ6000  CLOSE     OPRAUDSE                      * close new file
          CLOSE     OLDFILE                       * close old file
.
          DISPLAY   *P15:20,"opraudse: ",*V2LON,RECNUM,*HOFF:
                    *P1:21,*EL,"Record No. : ";
          MOVE      ZERO,RECNUM
          MOVE      ZERO,DISNUM
.
          PACK      KEY19,SP60
          CALL      READSOL1                      * position at start
READ7000  CALL      READKOL1                      * read next record
          BRANCH    OVRCD,READ8000                * no more records
.
          ADD       ONE,RECNUM                    * update record counter
          ADD       ONE,DISNUM                    * Display counter
.
          IF        DISNUM = 5000  | RECNUM = 1
            MOVE      ZERO,DISNUM
            DISPLAY   *P15:21,*V2LON,RECNUM
          ENDIF
.
          MOVE      SP70,OPSECNDT
          MOVE      SP70,OPSECNTM
          MOVE      SP70,OPSECNID
          MOVE      SP70,OPSEDTCM
          MOVE      SP70,OPSEUCDT
          MOVE      SP70,OPSEDCDT
          MOVE      SP70,OPSETCDT
          MOVE      SP70,OPSEUUDT
          MOVE      SP70,OPSEDUDT
          MOVE      SP70,OPSETUDT
          MOVE      SP70,OPSESPAR
.
          PACK      KEY19,OPSEDATE,OPSETIME,OPSECLIN,SP70
          CALL      WROPSES1
.
          GOTO      READ7000
.
READ8000  CLOSE     OPRSESA1
          CLOSE     OLDFIL1
.
          CALL      IBACLOCK
          REP       " 0",CDATE
          DISPLAY   *P15:21,"oprsesaf: ",*V2LON,RECNUM,*HOFF:
                    *P1:22,"Ended  : ",CDATE,SP1,CTIMEIS:
                    *P1:24;
