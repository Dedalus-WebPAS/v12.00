.*      PATLGPDS : Display LGP entries for a given post code - PPOST   *
.*                                                                     *
.*      Author   : Whirlpool                                           *
.*                                                                     *
.*      Date     : 13/02/92                                            *
.*                                                                     *
.*      Mods     :                                                     *
.*                                                                     *
.***********************************************************************

.
PATLGPDS  MOVE       FIVE,CVERT
          MOVE       ONE,CCOL
.         
          DISPLAY    *P1:3,*EF,*P20:4,*V2LON,*ULON,"LGA CODES"
.
          PACK       KEY12,PPOST,SP10
          CALL       RSPTLGP1
.
.         Loop over file
.
PTLGP100  CALL       RKPTLGP1
          BRANCH     OVRCD,PTLGP999     
.
          MATCH      PPOST,PTLGPOST
          GOTO       PTLGP999 IF NOT EQUAL
.
          PACK       KEY4,PTLGLGAC
          CALL       RDLGAA1 
          BRANCH     OVRCD,PTLGP100
.
          DISPLAY    *PCCOL:CVERT,*V2LON,PTLGLGAC,SP2,*HOFF,LGADESC
          ADD        ONE,CVERT
          COMPARE    TWENTY4,CVERT
          GOTO       PTLGP100 IF LESS
.
          MOVE       FIVE,CVERT
          ADD        "40",CCOL
          COMPARE    "70",CCOL
          GOTO       PTLGP100 IF LESS
.
.         Use the new standards question
.
PTLGP200  KEYIN     *P1:24,*EL," (",*V2LON,"C",*HOFF,")ontinue, (":
                    *V2LON,"F",*HOFF,")irst Screen, (":
                    *V2LON,"N",*HOFF,")ext Screen : ",*V2LON,ANS;
.
          CMATCH    ANSC,ANS
          GOTO      PTLGP999 IF EQUAL
          CMATCH    ANSF,ANS
          GOTO      PATLGPDS IF EQUAL
.
PTLGP400  MOVE       FIVE,CVERT
          MOVE       ONE,CCOL
          DISPLAY    *P1:5,*EF
.
          GOTO       PTLGP100
.
PTLGP999  RETURN
