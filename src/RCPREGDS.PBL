+
.******************************************************************************
.
.         RCPREGDS.PBL
.         ------------
.         This include displays entries in Register Master file.
. 
. MODS.   Copied from RCPDSREG
.         I.Rutt 08/03/94
.         19/07/1995  Steve Armstrong
.                     Fixed display of "HITENTER" after last record displayed
.
.------------------------------------------------------------------------------
.         Display Category Heading, and then loop over entries
.------------------------------------------------------------------------------
.
RCPREGDS  DISPLAY   *P1:4,*EF,*P20:4,*V2LON,*ULON,"REGISTER MASTER"
          MOVE      FIVE,CVERT
          MOVE      ONE,CCOL
.
          PACK      KEY3,SP3
          CALL      RDSREGA1
RDSR1000  CALL      RDKREGA1
          BRANCH    OVRCD,RDSR2000
.
          DISPLAY   *PCCOL:CVERT,*V2LON,REGCODE,SP1,*HOFF,REGDESC
.
          ADD       ONE,CVERT
          COMPARE   TWENTY4,CVERT
          GOTO      RDSR1000 IF LESS
.
          MOVE      FIVE,CVERT
          ADD       "40",CCOL
          COMPARE   "70",CCOL
          GOTO      RDSR1000 IF LESS
.
          BRANCH    CNEWDS,RDSR1500
          KEYIN     *P1:24,*EL," (",*V2LON,"E",*HOFF,")xit, (":
                    *V2LON,"F",*HOFF,")irst Screen, (":
                    *V2LON,"N",*HOFF,")ext Screen : ",*V2LON,ANS;
.
          REP       UPPLOW,ANS
          CMATCH    ANSE,ANS
          GOTO      RDSR3000 IF EQUAL
.
          CMATCH    ANSF,ANS
          GOTO      RCPREGDS IF EQUAL
.
          MOVE      FIVE,CVERT
          MOVE      ONE,CCOL
          DISPLAY   *P1:5,*EF
          GOTO      RDSR1000
.
RDSR1500  KEYIN     *P1:24,*EL," (",*V2LON,"C",*HOFF,")ontinue, (":
                    *V2LON,"F",*HOFF,")irst Screen, (":
                    *V2LON,"N",*HOFF,")ext Screen : ",*V2LON,ANS;
.
          REP       UPPLOW,ANS 
          CMATCH    ANSC,ANS
          GOTO      RDSR3000 IF EQUAL
.
          CMATCH    ANSF,ANS
          GOTO      RCPREGDS IF EQUAL
.
          MOVE      FIVE,CVERT
          MOVE      ONE,CCOL
          DISPLAY   *P1:5,*EF
          GOTO      RDSR1000
.
.         End of codes
.
RDSR2000  BRANCH    CNEWDS,RDSR3000
          DISPLAY   *P1:24,*EL;
          CALL      HITENTER
.
RDSR3000  MOVE      ZERO,OVRCD
          RETURN
.
