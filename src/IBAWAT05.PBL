                    *P25:7,WPTIME:
                    *P27:8,WPESTLS:
                    *P25:9,WPGRP,*HOFF,*P31:9,GRPDESC:
                    *P25:10,*V2LON,WTWPHDPE;
          MOVE      DNO,ACTDESC
