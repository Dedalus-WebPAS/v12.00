+
.*****************************************************************************
.*                            OFIX0000                                       *
.*                    Oracle fix to "PRIFACFD"                               *
.*****************************************************************************
.
OFIX0000  DISPLAY   *P1:24,*EL;
          CALL      IBACLOCK
          REP       " 0",CDATE
          REP       " 0",CTIMEIS
          DISPLAY   *P1:18,"Started : ",CDATE,SP1,CTIMEIS:
                    *P1:20,*EL,"Record No. :";
.
          CALL      SLOG0000                      * write start to log file
.
          OPEN      PRIFACT1,"prifactf"
.
          PACK      KEY18,SP70
          CALL      RSPRFA1                      * position at start of file
OFIX0500  CALL      RKPRFA1                      * read next record
          BRANCH    OVRCD,OFIX9000                * eof - finished
.
          ADD       ONE,RECNUM                    * increment record counter
          ADD       ONE,DISNUM                    * Display counter
.         
          IF        DISNUM = 5000  | RECNUM = 1
            MOVE      ZERO,DISNUM 
            DISPLAY   *P15:20,*V2LON,RECNUM
          ENDIF
.
.>>>>>>>  Add code here to populate/update variables
.
          CALL      UPPRFA1
.
          GOTO      OFIX0500                     * get next record
.         
OFIX9000  CLOSE     PRIFACT1
.
          CALL      IBACLOCK
          REP       " 0",CDATE
          REP       " 0",CTIMEIS
          DISPLAY   *P15:20,*V2LON,RECNUM,*HOFF:
                    *P1:22,"Update completed ",CDATE,SP1,CTIMEIS:
                    *P1:24;
          CALL      HITENTER
.
          CALL      ELOG0000                     * write an end log entry
.
OFIX9999  RETURN
.
OFDUMYIO  RETURN
+
.*****************************************************************************
.*        I/O Routines                                                       *
.*****************************************************************************
.
.                  ******************************    OLD IO ROUTINES
.                  Copy the Positional Read (RS or RDS) from original I/O file,
.                  - change Label to READSOLD and the index name to OLDFILE1
.
READSOLD  MOVE      ZERO,OVRCD
          READ      OLDFILE1,KEY18;;
          RETURN
.
.                  Copy the Read Next (RK or RDK) from the original I/O file
.                  - change Label to READKOLD and the index name to OLDFILE1
.                  - change any fields that are changing to a prefix of OLD,
.                    eg. PTEDSPAR becomes OLDDSPAR
.
READKOLD  MOVE      ZERO,OVRCD
          READKS    OLDFILE1;PRFADATE,PRFADEBT,DPRFASCN,PRFAACTN:
                             PRFACOMM,PRFAMPRA,OLDASPAR
.
          GOTO      OVERCOND IF OVER
          MOVE      DPRFASCN,PRFASCAN
          RETURN
.
.                  ******************************    NEW IO ROUTINES
.                  Copy the Write statement from the new I/O file           
.                  (no changes are needed to this routine)               
.
.                  For Oracle fixits, you will probably also need to copy
.                  the RS.., RK.... & UP.... I/O routines for the new FD.
.
RSPRFA1   RESET     KEY18
          READ      PRIFACT1,KEY18;;
          RETURN
.
RKPRFA1   MOVE      ZERO,OVRCD
          READKS    PRIFACT1;PRFADATE,PRFADEBT,DPRFASCN,PRFAACTN:
                             PRFACOMM,PRFAMPRA,PRFADTCP,PRFACDAT:
                             PRFACTIM,PRFACUID,PRFAUDAT,PRFAUTIM:
                             PRFAUUID,PRFASPAR
          GOTO      OVERCOND IF OVER
          MOVE      DPRFASCN,PRFASCAN
          RETURN
.
UPPRFA1   MOVE      PRFASCAN,DPRFASCN
          UPDATE    PRIFACT1;PRFADATE,PRFADEBT,DPRFASCN,PRFAACTN:
                             PRFACOMM,PRFAMPRA,PRFADTCP,PRFACDAT:
                             PRFACTIM,PRFACUID,PRFAUDAT,PRFAUTIM:
                             PRFAUUID,PRFASPAR
          RETURN
.
WRPRFA1   RESET     KEY18
          MOVE      PRFASCAN,DPRFASCN
          WRITE     PRIFACT1,KEY18;KEY18,PRFAACTN,PRFACOMM,PRFAMPRA,PRFADTCP:
                                         PRFACDAT,PRFACTIM,PRFACUID,PRFAUDAT:
                                         PRFAUTIM,PRFAUUID,PRFASPAR
          RETURN
.
          INC       STD001IO
