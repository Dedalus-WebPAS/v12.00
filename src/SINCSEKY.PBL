.---------------------------------------------------------------------------
. CSICSA - check security for a cost centre
.          Requires: PASSCODE (user id)
.                    SICACODE (cost centre)
.          Returns : OVRCD=1 if no access to that cc
.---------------------------------------------------------------------------
CSICSA00  PACK      KEY9,PASSCODE,SP70
          CALL      RDSICS1
          IF        OVRCD=1
            PACK      KEY9,PASSCODE,SICACODE,SP70
            CALL      RDSICS1
          ENDIF
.
CSICSA99  RETURN
.---------------------------------------------------------------------------
.   System    :   Supply and Inventory               
.   Include   :   SINCCAKY
.   Routine   :   KSICSA00 Keyin Cost Centre and Check Security
.   Parameter :   CKEYTYP 0 = Keyin , 1 = Accept, 2 = Either
.   Return    :   EXIT = 1 null entry, 2 EXITCHAR entered
.-------------------------------------------------------------------------------
KSICSA00 TOPIC     "SICACODE"
          MOVE      UNDLN70,SICACODE
          KEYIN     *PCCOL:CVERT,*DV,SICACODE:                                  
                    *PCCOL:CVERT,*V2LON,SICACODE:                               
                    *PCCOL:CVERT,*DV,SICACODE
.
          ENDSET    SICACODE
          APPEND    SP70,SICACODE
          RESET     SICACODE
.
          MATCH     SP70,SICACODE
          GOTO      KSICSA90 IF EQUAL
.
          CMATCH    EXITCHAR,SICACODE
          GOTO      KSICSA95 IF EQUAL
.
          CMATCH    QUEST,SICACODE
          GOTO      KSICSA10 IF NOT EQUAL
.
          MOVE      CCITEM,SCCITEM
          CALL      HSICSA00
          MOVE      SCCITEM,CCITEM
.
          ENDSET    SICACODE
          APPEND    SP70,SICACODE
          RESET     SICACODE
.
          MATCH     SP70,SICACODE
          GOTO      KSICSA00 IF EQUAL
.
          DISPLAY   *PCCOL:CVERT,*V2LON,SICACODE                                
KSICSA10
          PACK      KEY5,SICACODE                                               
          CALL      RASICA1 
          BRANCH    OVRCD,KSICSA80
          BRANCH    CKEYTYP,KSICSA75
          CALL      RDSICA1
.
          CALL      CSICSA00           * check security
          IF        OVRCD=1
            MOVE      "You Have No Access To That Cost Centre - ",DISPMSG
            CALL      MESSAGE1
            GOTO      KSICSA00
          ENDIF
KSICSA70
          MOVE      ZERO,EXIT
          GOTO      KSICSA99
KSICSA75
          MOVE      "Cost Centre Already Exist - ",DISPMSG
          CALL      MESSAGE1
          GOTO      KSICSA00
KSICSA80
          MOVE      ZERO,EXIT
          BRANCH    CKEYTYP,KSICSA99,KSICSA99
          MOVE      "Cost Centre Does Not Exist - ",DISPMSG                                          
          CALL      MESSAGE1
          GOTO      KSICSA00
KSICSA90
          MOVE      ONE,EXIT
          GOTO      KSICSA99
KSICSA95
          MOVE      TWO,EXIT
KSICSA99 TOPIC    PRGID
          RETURN
