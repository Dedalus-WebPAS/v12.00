.----------------------------------------------------------------------
.  data includes
.----------------------------------------------------------------------
.
          INC       STDGENDF
          INC       PMSIMPFD/INC
          INC       PMSIKIFD/INC
.
.----------------------------------------------------------------------
.  local variables
.----------------------------------------------------------------------
.
.
PRGID     INIT      "GENERJKI"
PRGNAM    INIT      "Generate Impairment Code Keywords"
VERSION   INIT      "V12.00.00"
.
.----------------------------------------------------------------------
.  program code
.----------------------------------------------------------------------
.
.---- initialise screen and confirm desire to execute program ----
.
ML0000    CALL      DISPHEAD
.
          DISPLAY   *P1:10,"This file generates Impairment Code Keyword":
                           " records."
          CALL      CONTQST
          SUB       ONE,CEXIT
          BRANCH    CEXIT,ML9999,ML9999
.
.---- open files ----
.
          OPEN      PMSIMPA1,"pmsimpaf"
          OPEN      PMSIKIA1,"pmsikiaf"
          OPEN      PMSIKIA2,"pmsikiaf"
.
.---- loop through pmsimpaf ----
.
          PACK      KEY7,SP70
          MOVE      ZERO,SECTOR
.
ML1000    CALL      RSPMIMP1           * read record positon
.
ML1100    CALL      RKPMIMP1           * read next record
          BRANCH    OVRCD,ML9999
.
          ADD       ONE,SECTOR         * display every 100th record
          IF        SECTOR%1000=1
            DISPLAY   *P1:24,*V2LON,SECTOR," - ",PMIMCODE,*EF;
          ENDIF
.
          PROC      PMSJKIUP
          GOTO      ML1100
.
.---- exit program ----
.
ML9999    CHAIN     PGM
.----------------------------------------------------------------------
.  code includes
.----------------------------------------------------------------------
.
          INC       PMSIMPIO/INC
          INC       PMSIKIIO/INC
          INC       PMSJKIPR
          INC       STDGENCD
.
