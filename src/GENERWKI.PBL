.----------------------------------------------------------------------
.  data includes
.----------------------------------------------------------------------
.
          INC       STDGENDF
          INC       WATPROFD/INC
          INC       WATPKIFD/INC
.
.----------------------------------------------------------------------
.  local variables
.----------------------------------------------------------------------
.
.
PRGID     INIT      "GENERWKI"
PRGNAM    INIT      "Fix watpkiaf"
VERSION   INIT      "V12.00.00"
.
.----------------------------------------------------------------------
.  program code
.----------------------------------------------------------------------
.
.---- initialise screen and confirm desire to execute program ----
.
ML0000    CALL      DISPHEAD
.
          DISPLAY   *P1:10,"Generate Waiting List Procedure Keyword records."
          CALL      CONTQST
          SUB       ONE,CEXIT
          BRANCH    CEXIT,ML9999,ML9999
.
.---- open files ----
.
          OPEN      WATPROA1,"watproaf"
          OPEN      WATPKIA1,"watpkiaf"
          OPEN      WATPKIA2,"watpkiaf"
.
.---- loop through watproaf ----
.
          PACK      KEY9,SP70
          MOVE      ZERO,SECTOR
.
ML1000    CALL      RDSPROA1           * read next record
.
ML1100    CALL      RDKPROA1
          BRANCH    OVRCD,ML9999
.
          ADD       ONE,SECTOR         * display every 100th record
          IF        SECTOR%1000=1
            DISPLAY   *P1:24,*V2LON,SECTOR," - ",WPCODE,*EF;
          ENDIF
.
          PROC      WATPKIUP
          GOTO      ML1100
.
.---- exit program ----
.
ML9999    CHAIN     PGM
