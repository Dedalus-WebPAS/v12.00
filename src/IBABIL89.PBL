         IF        OVRCD  = 1
           MOVE      "Y",EOFNUR
         ENDIF
         BRANCH    OVRCD,NURS9000
         MATCH     NSTAT,SAVNSTAT
         GOTO      NURS9000 IF NOT EQUAL
.
         PACK      KEY6,NWARD,SP30
         CALL      RDWARD1
         BRANCH    OVRCD,NURS1000          * (should not happen)
         CALL      WARD0000
         GOTO      NURS1000
.
NURS9000 CALL      GTOT0000
         MOVE      TRUE,EXIT
         MATCH     "Y",EOFNUR
         IF        @EQUAL
           MOVE      FALSE,EXIT
         ENDIF
