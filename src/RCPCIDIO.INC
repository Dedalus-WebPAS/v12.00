.
.    INC       RCPCIDIO.INC
.
.    FILE  I/O REQUESTS FOR CASHIER ID FILE.
.
.OVRCD  FORM            1             0=NOT OVER
.                                     1= OVER
.KEY6   DIM             6             KEY FOR RCPCIDA1
.
.       NOTE  OVRCD=1   RECORD DOES NOT EXIST
.                   2   RECORD IS LOCKED
.
RDACIDA1 RESET     KEY6
         MOVE      ZERO,OVRCD
         READ      RCPCIDA1,KEY6;ANS
         GOTO      OVERCOND IF OVER
         RETURN  
.
RDSCIDA1 RESET     KEY6
         READ      RCPCIDA1,KEY6;;
         RETURN  
.
RDCIDA1  MOVE      ZERO,OVRCD
         RESET     KEY6
         READ      RCPCIDA1,KEY6;RCPCASH,RCPPASS,RCPSUR,RCPGIVEN,RCPSECUR: 
                                 RCCIHOSP,RCCICHQA,RCCIACTV,RCCICCRD:
                                 RCCIINVR,RCCIDEPR,RCCI3PPS,RCCISPAR
         GOTO      OVERCOND IF OVER
         RETURN  
.
RLCIDA1  MOVE      ZERO,OVRCD
         RESET     KEY6
         READL     RCPCIDA1,KEY6;RCPCASH,RCPPASS,RCPSUR,RCPGIVEN,RCPSECUR: 
                                 RCCIHOSP,RCCICHQA,RCCIACTV,RCCICCRD:
                                 RCCIINVR,RCCIDEPR,RCCI3PPS,RCCISPAR
         GOTO      OVERLOCK IF LOCKED 
         GOTO      OVERCOND IF OVER
         RETURN  
.
RDKCIDA1 MOVE      ZERO,OVRCD
         READKS    RCPCIDA1;RCPCASH,RCPPASS,RCPSUR,RCPGIVEN,RCPSECUR,RCCIHOSP:
                            RCCICHQA,RCCIACTV,RCCICCRD,RCCIINVR,RCCIDEPR:
                            RCCI3PPS,RCCISPAR
         GOTO      OVERCOND IF OVER
         RETURN  
.
RDPCIDA1 MOVE      ZERO,OVRCD
         READKP    RCPCIDA1;RCPCASH,RCPPASS,RCPSUR,RCPGIVEN,RCPSECUR,RCCIHOSP:
                            RCCICHQA,RCCIACTV,RCCICCRD,RCCIINVR,RCCIDEPR:
                            RCCI3PPS,RCCISPAR
         GOTO      OVERCOND IF OVER
         RETURN  
.
WRCIDA1  RESET     KEY6
         MOVE      ZERO,OVRCD
         TRAP      OVERLOCK IF IO 
         WRITE     RCPCIDA1,KEY6;KEY6,RCPPASS,RCPSUR,RCPGIVEN,RCPSECUR,RCCIHOSP:
                            RCCICHQA,RCCIACTV,RCCICCRD,RCCIINVR,RCCIDEPR:
                            RCCI3PPS,RCCISPAR
         TRAPCLR   IO 
         RETURN  
.
UPCIDA1  UPDATE    RCPCIDA1;RCPCASH,RCPPASS,RCPSUR,RCPGIVEN,RCPSECUR,RCCIHOSP:
                            RCCICHQA,RCCIACTV,RCCICCRD,RCCIINVR,RCCIDEPR:
                            RCCI3PPS,RCCISPAR
         RETURN  
.
ULCIDA1  UNLOCK    RCPCIDA1
         RETURN
.
.
DECIDA1  RESET     KEY6
         MOVE      ZERO,OVRCD
         DELETE    RCPCIDA1,KEY6
         RETURN
.
