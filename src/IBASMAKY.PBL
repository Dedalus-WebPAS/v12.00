.---------------------------------------------------------------------------
.   System    :   IBA Software                       
.   Include   :   IBASMAKY
.   Routine   :   KIBSMA00 Keyin System              
.   Parameter :   CKEYTYP 0 = Keyin , 1 = Accept, 2 = Either
.   Return    :   EXIT = 1 null entry, 2 EXITCHAR entered
.-------------------------------------------------------------------------------
KIBSMA00
          MOVE      UNDLN70,IBSMNUMB
          KEYIN     *PCCOL:CVERT,*DV,*JR,IBSMNUMB:
                    *PCCOL:CVERT,IBSMNUMB:
                    *PCCOL:CVERT,*DV,IBSMNUMB
.
          ENDSET    IBSMNUMB
          APPEND    SP70,IBSMNUMB
          RESET     IBSMNUMB
.
          MATCH     SP70,IBSMNUMB
          GOTO      KIBSMA90 IF EQUAL
.
          CMATCH    EXITCHAR,IBSMNUMB
          GOTO      KIBSMA95 IF EQUAL
.
          MATCH     "  ?",IBSMNUMB
          GOTO      KIBSMA10 IF NOT EQUAL
.
          MOVE      CCITEM,SCCITEM
          CALL      HIBSMA00
          MOVE      SCCITEM,CCITEM
.
          ENDSET    IBSMNUMB
          APPEND    SP70,IBSMNUMB
          RESET     IBSMNUMB
.
          MATCH     SP70,IBSMNUMB
          GOTO      KIBSMA00 IF EQUAL
.
          DISPLAY   *PCCOL:CVERT,*V2LON,IBSMNUMB
KIBSMA10
          PACK      KEY3,IBSMNUMB
          CALL      RAIBSMA1
          BRANCH    OVRCD,KIBSMA80
          BRANCH    CKEYTYP,KIBSMA75
          CALL      RDIBSMA1
KIBSMA70
          MOVE      ZERO,EXIT
          GOTO      KIBSMA99
KIBSMA75
          DISPLAY   *P1:24,*EL,*B,"System Already Exist - ";
          CALL      HITENTER
          GOTO      KIBSMA00
KIBSMA80
          MOVE      ZERO,EXIT
          BRANCH    CKEYTYP,KIBSMA99,KIBSMA99
          DISPLAY   *P1:24,*EL,*B,"System Does Not Exist - ";
          CALL      HITENTER
          GOTO      KIBSMA00
KIBSMA90
          MOVE      ONE,EXIT
          GOTO      KIBSMA99
KIBSMA95
          MOVE      TWO,EXIT
KIBSMA99
          RETURN
