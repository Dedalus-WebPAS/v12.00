          GOTO       PSUB9999 IF EQUAL
          CALL       UND132
          PRINT      *1,"SUB-TOTAL - ",DIM13,*93,SUBTOT
          CALL       UND132
          MOVE       ZERO,SUBTOT
PSUB9999  RETURN
+
.*******************************************************************************
