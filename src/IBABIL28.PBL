          GOTO      ALDEPT IF NOT EQUAL
.
          PRINT     *59,"ALL DEPARTMENTS",*N,*N;
          GOTO      PRTSEL9     
.
ALDEPT    PRINT     *59,"DEPT",FSTDEPT,*N,*N;
          GOTO      PRTSEL9     
