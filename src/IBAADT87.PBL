          RETURN
.
RDSWORK2  READ      WORK2,KEY3;;
          RETURN
.
RDKWORK2  MOVE      ZERO,OVRCD
          READKS    WORK2;XCODE,XDESC,XNSEP,XSEPD,XBEDD,XLEVD,XYTDNSP,XYTDSEP:
                    XYTDBED,XYTDLEV
          GOTO      OVERCOND IF OVER
          RETURN
