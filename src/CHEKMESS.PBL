.
.********************************************************************** 
.*                              CKMS0000                              *
.*                      Check for Message to User                     *
.********************************************************************** 
.
CHKMS000  OPEN      IHAPASS1,"ihapassf"
.
          MOVE      PASSCODE,KEY4                   * Validate on ihapassf
          CALL      RDPASS1
          BRANCH    OVRCD OF CHKMS999
.
          STRIP     SECMAIL
.
          CLEAR     FNAMEM
          APPEND    SECMAIL,FNAMEM
          APPEND    "/mes",FNAMEM
          RESET     FNAMEM
.
          TRAP      CHKMS100 IF IO
          OPEN      TMPMESG,FNAMEM
.
          TRAPCLR   IO
.
          GETVAR    ANS,DIM1,1,3
          CMATCH    ANS,SP1
          IF        @EQUAL
            DISPLAY   *P1:3,*V2LON,*BLINKON,"   You Have Mail  "
          ELSE
            DISPLAY   *P2:3,*G29,*V2LON,*BLINKON," You Have Mail ",*HOFF,*G28
          ENDIF
.
          GOTO      CHKMS999
.
CHKMS100  NORETURN

CHKMS999  RETURN

