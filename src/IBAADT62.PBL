          MOVE      ZERO,EXIT
.
KREA9999  RETURN
+
.******************************************************************************
.* Keyin the claim code                                                       *
.******************************************************************************
KCLM0000  MOVE      "9",EVERT
          MOVE      "24",ECOL               * keyin position
          MOVE      "33",ECOL1              * Display description position
.
          MOVE      SP3,ACODE
          MOVE      "CL",CODE
          MOVE      ONE,CKYIMAND
          DISPLAY   *P1:EVERT,"Claim Code           : "
          DISPLAY   *PECOL:EVERT,*EL;
