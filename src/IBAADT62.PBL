          MOVE      "9",EVERT
          MOVE      "24",ECOL
          MOVE      "33",ECOL1
.
          MOVE      ONE,CKYIMAND
          MOVE      ONE,CKYINACT
          MOVE      SP20,HLTHFUND
          PACK      HCODE,SP20
.
          DISPLAY   *P1:EVERT,"Health Fund          : "
          DISPLAY   *PECOL:EVERT,*EL;
          CALL      PATFNDKY
.
          PACK      HLTHFUND,HCODE,SP10
.
          BRANCH    EXIT,KFND9200:          * Nothing entered
                         KFND9999           * Exitchar entered
.
