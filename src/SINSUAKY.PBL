.---------------------------------------------------------------------------
.   System    :   Supply and Inventory               
.   Include   :   SINSUAKY
.   Routine   :   HSISAA00 Product Group       
.   Return    :   SISACODE
.-------------------------------------------------------------------------------
HSISAA00
          MOVE      ZERO,CSCRSIZ
          IF        HTOP<3
            MOVE      "10",HTOP
            MOVE      "24",HBOT
            MOVE      "30",HLEF
            MOVE      "80",HRIG
          ENDIF
HSISAA04
          CALL      GSCRN000
          BRANCH    EXIT,HSISAA99
          MOVE      STDCOL00,STDCOL01
          ADD       " 5",STDCOL01
          DISPLAY   *PSTDCOL01:STDROW,*V2LON,*ULON,"Product Group"      
.
          MOVE      STDCOL01,STDCOL02
          ADD       "14",STDCOL02
          DISPLAY   *PSTDCOL02:STDROW,*V2LON,*ULON,"Description"        
.
          MOVE      STDCOL02,STDCOL03
          ADD       "35",STDCOL03
HSISAA08
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          MOVE      SP70,SISACODE
          PACK      KEY5,SISACODE,SP70                                          
.                                                                               
.                                                                               
          CALL      RSSISA1 
HSISAA10
          CALL      RKSISA1 
          BRANCH    OVRCD,HSISAA15
          PACK      KEY5,SISACODE,SP70                                          
.                                                                               
.                                                                               
          BRANCH    CSEARCH,HSISAA12
          CALL      HSISAA60
          BRANCH    OVRCD,HSISAA10
HSISAA12
          ADD       ONE,XITEMNO
          ADD       ONE,STDROW
          STORE     KEY5,XITEMNO,ST1,ST2,ST3,ST4,ST5:                            
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          DISPLAY   *PSTDCOL00:STDROW,SP1,*V2LON,XITEMNO,DOT
          DISPLAY   *PSTDCOL01:STDROW,SISACODE
          DISPLAY   *PSTDCOL02:STDROW,SISADESC
          COMPARE   MAXITEM,XITEMNO
          GOTO      HSISAA10 IF NOT EQUAL
HSISAA15
.                                                                               
          MOVE      ONE,DITEM
          MOVE      MINITEM,DROW
          ADD       ONE,DROW
          DISPLAY   *PSTDCOL00:DROW,*V2LON,*HON,SP1,DITEM,DOT
          CLIP
          FLUSH     HLEF,HTOP,HRIG,HBOT
.
HSISAA20
          CALL      HSCRI000
          BRANCH    EXIT,HSISAA30,HSISAA35,HSISAA40,HSISAA45,HSISAA04:
                              HSISAA91,HSISAA50
          GOTO      HSISAA92
HSISAA30
          CALL      RKSISA1 
          BRANCH    OVRCD,HSISAA85
          PACK      KEY5,SISACODE,SP70                                          
.                                                                               
.                                                                               
          CALL      RPSISA1 
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HSISAA10
HSISAA35
          MOVE      ST1,KEY5 
          CALL      RDSISA1 
          CALL      RPSISA1 
          BRANCH    OVRCD,HSISAA85
          PACK      KEY5,SISACODE,SP70                                          
.                                                                               
.                                                                               
.                                                                               
.                                                                               
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          MOVE      MINITEM,STDROW
          MOVE      MAXITEM,XITEMNO
HSISAA36
          CALL      RPSISA1 
          BRANCH    OVRCD,HSISAA37
          PACK      KEY5,SISACODE,SP70                                          
.                                                                               
.                                                                               
          SUB       ONE,XITEMNO
          COMPARE   ZERO,XITEMNO
          GOTO      HSISAA36 IF NOT EQUAL
HSISAA37
          MOVE      ZERO,XITEMNO
          GOTO      HSISAA10
HSISAA40
          MOVE      ST1,KEY5 
          CALL      RDSISA1 
          CALL      RPSISA1 
          BRANCH    OVRCD,HSISAA85
          PACK      KEY5,SISACODE,SP70                                          
.                                                                               
.                                                                               
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HSISAA08
HSISAA45
          CALL      RKSISA1 
          BRANCH    OVRCD,HSISAA85
          PACK      KEY5,SISACODE,SP70                                          
.                                                                               
.                                                                               
          SUSPEND
          CLIP      1,1,CRIG,24
.
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          MOVE      ZERO,XITEMNO
          PACK      KEY5,Z70                                                    
          MOVE      MINITEM,STDROW
          MOVE      MAXITEM,XITEMNO
          CALL      RSSISA1 
HSISAA46
          CALL      RPSISA1 
          BRANCH    OVRCD,HSISAA47
          PACK      KEY5,SISACODE,SP70                                          
.                                                                               
.                                                                               
          SUB       ONE,XITEMNO
          COMPARE   ZERO,XITEMNO
          GOTO      HSISAA46 IF NOT EQUAL
HSISAA47
          MOVE      ZERO,XITEMNO
          GOTO      HSISAA10
HSISAA50  COMPARE   ZERO,CSEARCH
          GOTO      HSISAA55 IF EQUAL
          MOVE      ZERO,CSEARCH
          MOVE      ZERO,XITEMNO
          MOVE      MINITEM,STDROW
          ADD       ONE,STDROW
          UNPACK    SP70,SCHFLD01,SCHFLD02,SCHFLD03,SCHFLD04,SCHFLD05
          UNPACK    SP70,SCHFLD06,SCHFLD07,SCHFLD08,SCHFLD09,SCHFLD10
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          DISPLAY   *PSTDCOL00:STDROW,*V2LON,*HON,"Sch"
          KEYIN     *PSTDCOL01:STDROW,*V2LON,SCHFLD01
          RESET     SCHFLD01
          KEYIN     *PSTDCOL02:STDROW,*V2LON,SCHFLD02
          RESET     SCHFLD02
          PACK      KEY8,SP70
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HSISAA08
HSISAA55  MOVE      ONE,CSEARCH
          PACK      KEY8,SP70
          SUSPEND
          CLIP      1,1,CRIG,24
          BOXCLR    CLEF,CTOP,CRIG,CBOT
          GOTO      HSISAA08
HSISAA60  MOVE      ZERO,OVRCD
          MATCH     SP70,SCHFLD01
          GOTO      HSISAA61 IF EQUAL
          MATCH     SCHFLD01,SISACODE
          GOTO      HSISAA72 IF NOT EQUAL
HSISAA61
          MATCH     SP70,SCHFLD02
          GOTO      HSISAA62 IF EQUAL
          MATCH     SCHFLD02,SISADESC
          GOTO      HSISAA72 IF NOT EQUAL
HSISAA62
HSISAA63
HSISAA64
HSISAA65
HSISAA66
HSISAA67
HSISAA68
HSISAA69
HSISAA70
          GOTO      HSISAA75
HSISAA72  MOVE      ONE,OVRCD
HSISAA75  RETURN
HSISAA85
          LOAD      KEY5,XITEMNO,ST1,ST2,ST3,ST4,ST5:                            
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          UNPACK    KEY5,SISACODE                                               
          CALL      RDSISA1 
HSISAA90
.                                                                               
          BEEP
          GOTO      HSISAA20
HSISAA91
          MOVE      SP70,SISADESC
          MOVE      SP70,SISACOMM
          MOVE      SP70,SISAGLI 
          MOVE      SP70,SISAUR1 
          MOVE      SP70,SISAUR2 
          MOVE      SP70,SISAUD1 
          MOVE      SP70,SISAUD2 
          MOVE      SP70,SISAUC1 
          MOVE      SP70,SISAUC2 
          MOVE      SP70,SISAUY1 
          MOVE      SP70,SISAUY2 
          MOVE      SP70,SISASPA 
          MOVE      SP70,KEY5 
          MOVE      SP70,SISACODE
          GOTO      HSISAA96
HSISAA92
          MOVE      SP70,KEY5 
          MOVE      SP70,SISACODE
          LOAD      KEY5,CCITEM,ST1,ST2,ST3,ST4,ST5:                            
                                ST6,ST7,ST8,ST9,ST10:
                                ST11,ST12,ST13,ST14,ST15:
                                ST16,ST17
          UNPACK    KEY5,SISACODE                                               
HSISAA96
          PUTSCR    CSSCRNUM,HLEF,HTOP,HRIG,HBOT
          CALL      FRESCR00
          MOVE      ZERO,HTOP
          MOVE      ZERO,HLEF
          MOVE      ZERO,HBOT
          MOVE      ZERO,HRIG
HSISAA99
          RETURN
.---------------------------------------------------------------------------
.   System    :   Supply and Inventory               
.   Include   :   SINSUAKY
.   Routine   :   KSISAA00 Keyin Product Group       
.   Parameter :   CKEYTYP 0 = Keyin , 1 = Accept, 2 = Either
.   Return    :   EXIT = 1 null entry, 2 EXITCHAR entered
.-------------------------------------------------------------------------------
KSISAA00 TOPIC     "SISACODE"
          MOVE      UNDLN70,SISACODE
          KEYIN     *PCCOL:CVERT,*DV,SISACODE:                                  
                    *PCCOL:CVERT,*V2LON,SISACODE:                               
                    *PCCOL:CVERT,*DV,SISACODE
.
          ENDSET    SISACODE
          APPEND    SP70,SISACODE
          RESET     SISACODE
.
          MATCH     SP70,SISACODE
          GOTO      KSISAA90 IF EQUAL
.
          CMATCH    EXITCHAR,SISACODE
          GOTO      KSISAA95 IF EQUAL
.
          CMATCH    QUEST,SISACODE
          GOTO      KSISAA10 IF NOT EQUAL
.
          MOVE      CCITEM,SCCITEM
          CALL      HSISAA00
          MOVE      SCCITEM,CCITEM
.
          ENDSET    SISACODE
          APPEND    SP70,SISACODE
          RESET     SISACODE
.
          MATCH     SP70,SISACODE
          GOTO      KSISAA00 IF EQUAL
.
          DISPLAY   *PCCOL:CVERT,*V2LON,SISACODE                                
KSISAA10
          PACK      KEY5,SISACODE                                               
          CALL      RASISA1 
          BRANCH    OVRCD,KSISAA80
          BRANCH    CKEYTYP,KSISAA75
          CALL      RDSISA1 
KSISAA70
          MOVE      ZERO,EXIT
          GOTO      KSISAA99
KSISAA75
          MOVE      "Product Group Already Exist - ",DISPMSG                                         
          CALL      MESSAGE1
          GOTO      KSISAA00
KSISAA80
          MOVE      ZERO,EXIT
          BRANCH    CKEYTYP,KSISAA99,KSISAA99
          MOVE      "Product Group Does Not Exist - ",DISPMSG                                        
          CALL      MESSAGE1
          GOTO      KSISAA00
KSISAA90
          MOVE      ONE,EXIT
          GOTO      KSISAA99
KSISAA95
          MOVE      TWO,EXIT
KSISAA99 TOPIC    PRGID
          RETURN
