.----------------------------------------------------------------------
.  data includes
.----------------------------------------------------------------------
.
          INC       STDGENDF
          INC       ALLPRRFD/INC
          INC       ALLPKIFD/INC
.
.----------------------------------------------------------------------
.  local variables
.----------------------------------------------------------------------
.
.
PRGID     INIT      "GENERAPK"
PRGNAM    INIT      "Fix allpkiaf"
VERSION   INIT      "V12.00.00"
.
.----------------------------------------------------------------------
.  program code
.----------------------------------------------------------------------
.
.---- initialise screen and confirm desire to execute program ----
.
ML0000    CALL      DISPHEAD
.
          DISPLAY   *P1:10,"Generate A/H Problem Keyword records."
          CALL      CONTQST
          SUB       ONE,CEXIT
          BRANCH    CEXIT,ML9999,ML9999
.
.---- open files ----
.
          OPEN      ALLPRRA1,"allprraf"
.
          OPEN      ALLPKIA1,"allpkiaf"
          OPEN      ALLPKIA2,"allpkiaf"
.
.---- loop through allprraf ----
.
          MOVE      ZERO,SECTOR
.
          PACK      KEY12,SP70
ML1000    CALL      RSALPRR1           * read next record
ML1100    CALL      RKALPRR1
          BRANCH    OVRCD,ML9999
.
          ADD       ONE,SECTOR
          IF        SECTOR%100=1
            DISPLAY   *P1:24,*V2LON,SECTOR," - ",ALPRPROB,*EF;
          ENDIF
.
          PROC      ALLAPKUP
          GOTO      ML1100
.
.---- exit program ----
.
ML9999    CHAIN     PGM
.----------------------------------------------------------------------
.  code includes
.----------------------------------------------------------------------
.
          INC       ALLPRRIO/INC
          INC       ALLPKIIO/INC
          INC       ALLAPKPR
          INC       STDGENCD
.
