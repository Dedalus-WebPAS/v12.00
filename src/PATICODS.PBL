.------------------------------------------------------------------------------
.         Display Heading, and then loop over entries
.------------------------------------------------------------------------------
.
PATICODS  DISPLAY   *P1:3,*EF,*P20:4,*V2LON,*ULON,"Operation Codes "
          MOVE      FIVE,CVERT
          MOVE      ONE,CCOL
.
          UNPACK    OPCODE,KEY1,KEY8
          PACK      OPCODE,KEY8,SP10
          PACK      KEY9,OPCODE,SP9
          CALL      RDSICO1
ICDO1000  CALL      RDKICO1
          BRANCH    OVRCD,ICDO5000
.
          MATCH     SP9,OPCODE                * Still only letter desc's
          GOTO      ICDO5000 IF EQUAL         * No - exit
.
          MOVE      ODESC,KEY70
          DISPLAY   *PCCOL:CVERT,*V2LON,OPCODE,SP1,*HOFF,KEY70
.
          ADD       ONE,CVERT
          COMPARE   TWENTY4,CVERT
          GOTO      ICDO1000 IF LESS
.
          MOVE      FIVE,CVERT
.....          ADD       "40",CCOL
.....          COMPARE   "70",CCOL
.....          GOTO      ICDO1000 IF LESS
.....          GOTO      ICDO1000
.
.         Check for new standards question, or old question
.
          BRANCH    CNEWDS,ICDO2000
.
          KEYIN     *P1:24,*EL," (",*V2LON,"E",*HOFF,")xit, (":
                    *V2LON,"F",*HOFF,")irst Screen, (":
                    *V2LON,"N",*HOFF,")ext Screen : ",*V2LON,ANS;
.
          REP       UPPLOW,ANS 
          CMATCH    ANSE,ANS
          GOTO      ICDO6000 IF EQUAL
          CMATCH    ANSF,ANS
          GOTO      PATICODS IF EQUAL
.
          GOTO      ICDO4000
.
.         Use the new standards question
.
ICDO2000  KEYIN     *P1:24,*EL," (",*V2LON,"C",*HOFF,")ontinue, (":
                    *V2LON,"F",*HOFF,")irst Screen, (":
                    *V2LON,"N",*HOFF,")ext Screen : ",*V2LON,ANS;
.
          REP       UPPLOW,ANS
          CMATCH    ANSC,ANS
          GOTO      ICDO6000 IF EQUAL
          CMATCH    ANSF,ANS
          GOTO      PATICODS IF EQUAL
.
ICDO4000  MOVE      FIVE,CVERT
          MOVE      ONE,CCOL
          DISPLAY   *P1:5,*EF
          GOTO      ICDO1000
.
.         End of codes
.
ICDO5000  BRANCH    CNEWDS,ICDO6000
          DISPLAY   *P1:24,*EL;
          CALL      HITENTER
.
ICDO6000  MOVE      ZERO,OVRCD
          RETURN
