.********************************************************************
. HEAD - print report                               Called by PRNT
.         Requires : FROMCST,TOCST   (print range display labels)
.                    STRCST,ENDCST   (print range)
.********************************************************************
HEAD0000
          MATCH     "S",REPTYPE
          IF        @EQUAL
            CALL      HEAD80                     * print heading
            PRINT     *20,"Print Summary For ",USPERD,SLASH,USYEAR;
.
            IF        (REPCOMPL=TRUE)
              PRINT     "   Including Completed Orders"
            ELSE
              PRINT     "   Excluding Completed Orders"
            ENDIF
            PRINT     *20,"From : ",FROMCST:
                      *N,*20,"To   : ",TOCST
            ADD       "3",CLNO
            CALL      UND80
            IF        (NOTEMPCC=TRUE)
              PRINT     "| Cost Centre                                 ":
                        "          |          Total":
                        *80,"|"
              ADD       "1",CLNO
              CALL      UND80                      * print line
            ENDIF
          ELSE
            CALL      HEAD132                    * print heading
            ADD       "3",CLNO
            PRINT     *40,"Print Full Report For ",USPERD,SLASH,USYEAR;
.
            IF        (REPCOMPL=TRUE)
              PRINT     "   Including Completed Orders"
            ELSE
              PRINT     "   Excluding Completed Orders"
            ENDIF
.
            PRINT     *40,"From : ",FROMCST:
                      *N,*40,"To   : ",TOCST
            IF        (NOTEMPCC=TRUE)
              PRINT     " Cost Centre : ",SICACODE,SP5,SICADESC
              CALL      UND132
              PRINT     *001,"| P/O ##":
                        *011,"| Description":
                        *051,"|Product":
                        *059,"|     Quantity":
                        *073,"|Order":
                        *089,"|    Quantity":
                        *102,"|           Unit":
                        *118,"|        Total":
                        *132,"|":
                        *N:
                        *001,"|":
                        *011,"|":
                        *051,"|  Group":
                        *059,"|      Ordered":
                        *073,"|Unit":
                        *089,"| Outstanding":
                        *102,"|           Cost":
                        *118,"|        Value":
                        *132,"|"
              ADD       "2",CLNO
              CALL      UND132                     * print line
            ELSE
              CALL      UND132                     * print line
            ENDIF
          ENDIF
.
HEAD9999  RETURN
.********************************************************************
. WSUM - print data line                            Called by PRNT
.********************************************************************
WSUM0000
          COMPARE   "55",CLNO                    * end of page ?
          CALL      HEAD0000 IF NOT LESS         * start new page
.
          CALL      WRTEXG00
          PRINT     "| ",SICACODE,SP2,SICADESC,"       |   ",ATOTAL01:
                    *80,"|"
          ADD       ATOTAL01,ATOTAL02
          ADD       "1",CLNO           * add one to line number
          MOVE      TRUE,NOTEMPTY
.
WSUM9999  RETURN
.********************************************************************
. WFUL - print data line                            Called by PRNT
.********************************************************************
WFUL0000
          IF        NEWCOSTC=1
            MOVE      FALSE,NEWCOSTC
            IF        FIRSTHRU=FALSE
              MOVE      "99",CLNO                * New page per cost centre
            ELSE
              MOVE      FALSE,FIRSTHRU           * Not first time thru anymore
            ENDIF
          ENDIF
          ASSIGN    SIPCOQT-(SIPCRQT/SIFACTOR),PQTYOUT
          ASSIGN    PQTYOUT*SIPCECT,PQTYTOT
          IF        PQTYOUT=0 & PQTYTOT=0
            GOTO      WFUL9999               * Don't Print if Zero Outstanding
          ENDIF
          MOVE      SIPCOQT,PQTYOQT
          MOVE      SIPCECT,PQTYECT
          MOVE      TRUE,NOTEMPTY
          MOVE      TRUE,NOTEMPCC
          COMPARE   "55",CLNO                    * end of page ?
          CALL      HEAD0000 IF NOT LESS         * start new page
.
          PACK      KEY5,SIPCPRD,SP70
          CALL      RDSISA1
.
          CALL      WRTEXA00
          PRINT     *001,"|",SIPCPON:
                    *011,"| ",SIPCPD:
                    *051,"| ",SIPCPRD:
                    *059,"|",PQTYOQT:
                    *073,"|",SIPCSUT:
                    *089,"|",PQTYOUT:
                    *102,"|",PQTYECT:
                    *118,"|",PQTYTOT,*132,"|"
          ADD       "1",CLNO           * add one to line number
.
WFUL9999  RETURN
.********************************************************************
. CEND - print Cost centre end for Full             Called by PRNT
.********************************************************************
CEND0000  BRANCH    NEWCOSTC,CEND9999
.
          IF        NOTEMPCC=TRUE
            CALL      UND132
            PRINT     "|",*103,"Total Value : ",ATOTAL01,"|"
            CALL      UND132
            ADD       ATOTAL01,ATOTAL02
          ENDIF
.
CEND9999  RETURN
.********************************************************************
. PEND - print end                                  Called by PRNT
.********************************************************************
PEND0000
          MATCH     "S",REPTYPE
          IF        @EQUAL
            IF        (NOTEMPTY=TRUE)
              CALL      UND80            * print line
              PRINT     "|        Grand Total                          ":
                        "          |   ":
                        ATOTAL02:
                        *80,"|"
              ADD       "1",CLNO         * add one to line number
              CALL      UND80            * print line
            ELSE
              PRINT     "|        No Data Found for Report Criteria",*80,"|"
              CALL      UND80            * print line
            ENDIF
          ELSE
            IF        (NOTEMPTY=TRUE)
              CALL      UND132           * print line
              PRINT     "|        Grand Total                          ":
                        *117,ATOTAL02:
                        *132,"|"
              ADD       "1",CLNO         * add one to line number
              CALL      UND132           * print line
            ELSE
              PRINT     "|        No Data Found for Report Criteria",*132,"|"
              CALL      UND132           * print line
            ENDIF
          ENDIF
.
PEND9999  RETURN
.------------------------------------------------------------
. File       : casetran
.
. Functions  : This file contains standard routines for
.              creating and transfering TAB delimited
.              export files to a PC using the unix script
.              keatran.
.
. Routines   : MAKEXP00  - Create the Export File and Headings
.              WRTEXA00  - Write Export details Record to File
.              WRTEXG00  - Write Export summary Record to File
.              TRAN0000  - Transfer file to PC using script keatran
.
. Note       : The Variable EXPORTYN is used to determine if a
.              export file is to be created. 0=No, 1=Yes.
.
. Variables to be Declared
. ------------------------
. EXPORTFL  FILE      ASCII, FIXED=400     * Export File (Adjust Length to Suit)
. EXPORTFN  DIM       8                    * Export File Name
. TABDELM   EQU       0x09                 * Tab Delimiter
.------------------------------------------------------------
. Create Export File
.------------------------------------------------------------
MAKEXP00  COMPARE   ONE,EXPORTYN
          GOTO      MAKEXP99 IF NOT EQUAL
          MOVE      "EXPORT",SVKEY6
          PACK      EXPORTFN,SVKEY6,PORT
          REP       " 0",EXPORTFN
          PREP      EXPORTFL,EXPORTFN
.
          MATCH     "S",REPTYPE
          GOTO      MAKEXP10 IF EQUAL
.
          WRITE     EXPORTFL,SEQ;"Period",TABDELM:
                                 "Year",TABDELM:
                                 "Cost Centre",TABDELM:
                                 "Cost Centre Description",TABDELM:
                                 "P/O No.",TABDELM:
                                 "Catalog Code",TABDELM:
                                 "Description",TABDELM:
                                 "Product Group",TABDELM:
                                 "Product Group Description",TABDELM:
                                 "Quantity Ordered",TABDELM:
                                 "Order Unit",TABDELM:
                                 "Quantity Outstanding",TABDELM:
                                 "Unit Cost",TABDELM:
                                 "Total Value"
          GOTO      MAKEXP99
.
MAKEXP10  WRITE     EXPORTFL,SEQ;"Period",TABDELM:
                                 "Year",TABDELM:
                                 "Cost Centre",TABDELM:
                                 "Cost Centre Description",TABDELM:
                                 "Total Outstanding"
.
MAKEXP99  RETURN
.------------------------------------------------------------
. Write to Export File
.------------------------------------------------------------
. write details
.
WRTEXA00  COMPARE   ONE,EXPORTYN
          GOTO      WRTEXA99 IF NOT EQUAL
.
          WRITE     EXPORTFL,SEQ;USPERD,TABDELM:
                                 USYEAR,TABDELM:
                                 SICACODE,TABDELM:
                                 SICADESC,TABDELM:
                                 SIPCPON,TABDELM:
                                 SIPCCAT,TABDELM:
                                 SIPCPD,TABDELM:
                                 SIPCPRD,TABDELM:
                                 SISADESC,TABDELM:
                                 PQTYOQT,TABDELM:
                                 SIPCSUT,TABDELM:
                                 PQTYOUT,TABDELM:
                                 PQTYECT,TABDELM:
                                 PQTYTOT
WRTEXA99  RETURN
.
. write summary
.
WRTEXG00  COMPARE   ONE,EXPORTYN
          GOTO      WRTEXG99 IF NOT EQUAL
.
          WRITE     EXPORTFL,SEQ;USPERD,TABDELM:
                                 USYEAR,TABDELM:
                                 SICACODE,TABDELM:
                                 SICADESC,TABDELM:
                                 ATOTAL01
WRTEXG99  RETURN
.------------------------------------------------------------
. Execute Transfer Script eg softerm
.------------------------------------------------------------
TRAN0000  COMPARE   ONE,EXPORTYN
          GOTO      TRAN9999 IF NOT EQUAL
          MOVE      YES,DEFYESNO
          CLOSE     EXPORTFL
          DISPLAY   *P1:24,*EL,"Execute Transfer Now (":
                               *V2LON,"Y",*HOFF,"/":
                               *V2LON,"N",*HOFF,") ? "
          MOVE      "24",CVERT
          MOVE      "30",CCOL
          CALL      YORN0000
          COMPARE   ZERO,FYESNO
          GOTO      TRAN9999 IF EQUAL   *  No Transfer
.
          MOVE      ZERO,HLEF
          CALL      GETSCR00
.
          CLEAR     KEY80
          APPEND    "keatran ",KEY80
          APPEND    EXPORTFN,KEY80
          APPEND    ".txt",KEY80
          RESET     KEY80
          EXECUTE   KEY80,TASKID
.
          CALL      PUTSCR00
.
          DISPLAY   *P1:24,*EL,"Transfer Completed Ok (":
                               *V2LON,"Y",*HOFF,"/":
                               *V2LON,"N",*HOFF,") ? "
          MOVE      "24",CVERT
          MOVE      "31",CCOL
          CALL      YORN0000
          COMPARE   ZERO,FYESNO,
          GOTO      TRAN0000 IF EQUAL   *  Not ok
.
          PREP      EXPORTFL,EXPORTFN
          CLOSE     EXPORTFL
.
TRAN9999  RETURN
.
.----------------------------------------------------------------------
. Enter Range of Cost Centre
.----------------------------------------------------------------------
ECOS0000  IF        REPTSTKF=1
            IF        ACCEPT<>1
              MOVE      "Report is for 'Stock' only.  ",DISPMSG
              CALL      MESSAGE1
            ENDIF
            CALL      SETSTK00
            GOTO      ECOS9900
          ENDIF
.
          MOVE      "    4",FLDID
          CALL      GETPOSIT
.
          BRANCH    OPTIONA,ECOS0100
          GOTO      ECOS5000
.
ECOS0100  CALL      KSICAA00
          BRANCH    EXIT,ECOS1100,ECOS9800
          MOVE      SICACODE,STRCST
          PACK      FROMCST,SICACODE,SP1,SICADESC
          GOTO      ECOS1140
ECOS1100  MOVE      "Start             ",FROMCST
          MOVE      SP70,STRCST
.
ECOS1140  MOVE      FROMCST,VAR
          CALL      DISPITEM
.
ECOS1150  MOVE      "    5",FLDID
          CALL      GETPOSIT
          CALL      KSICAA00
          BRANCH    EXIT,ECOS1200,ECOS9800
          MOVE      SICACODE,ENDCST
          PACK      TOCST,SICACODE,SP1,SICADESC
          MATCH     STRCST,ENDCST
          GOTO      ECOS9900 IF EQUAL
          GOTO      ECOS9900 IF NOT LESS
          BEEP
          MOVE      "To Cost Centre Must Be > From Cost Centre - ",DISPMSG
          CALL      MESSAGE1
          GOTO      ECOS0000
.
ECOS1200  MOVE      "Finish             ",TOCST
          MOVE      Z70,ENDCST
          GOTO      ECOS9900
.
ECOS5000  MOVE      ZERO,EXIT
          KEYIN     *PCCOL:CVERT,*V2LON,FROMCST;
          MATCH     EXITCHAR,FROMCST
          GOTO      ECOS9800 IF EQUAL
          PACK      PDESC1,FROMCST,SP70
          PACK      FROMCST,FROMCST,SP70
.
          MATCH     FROMCST,SP70
          IF        @EQUAL
            PACK      FROMCST,START,SP70
          ENDIF
.
          MOVE      "    5",FLDID
          CALL      GETPOSIT
.
          MOVE      SP70,TOCST
          KEYIN     *PCCOL:CVERT,*DV,TOCST:
                    *PCCOL:CVERT,*V2LON,TOCST;
          MATCH     EXITCHAR,TOCST
          GOTO      ECOS9800 IF EQUAL
          PACK      PDESC2,TOCST,Z70
          PACK      TOCST,TOCST,SP70
.
          MATCH     TOCST,SP70
          IF        @EQUAL
            PACK      TOCST,END,SP70
          ENDIF
.
          MATCH     PDESC1,PDESC2
          GOTO      ECOS9900 IF NOT LESS
          BEEP
          MOVE      "To Cost Centre Must Be > From Cost Centre - ",DISPMSG
          CALL      MESSAGE1
          GOTO      ECOS0000
.
ECOS9800  MOVE      TWO,EXIT
          GOTO      ECOS9999
.
ECOS9900  MOVE      "    4",FLDID
          CALL      GETPOSIT
ECOS9999  RETURN
.
.----------------------------------------------------------------------
. Keyin Report Type
.----------------------------------------------------------------------
KREPT000
          MOVE      "S",REPTYPE
          KEYIN     *PCCOL:CVERT,*V2LON,*RV,REPTYPE
          PACK      REPTYPE,REPTYPE,SP70
          REP       UPPLOW,REPTYPE
.
          MATCH     EXITCHAR,REPTYPE
          GOTO      KREPT950 IF EQUAL
          MATCH     "S",REPTYPE
          GOTO      KREPT900 IF EQUAL
          MATCH     "F",REPTYPE
          GOTO      KREPT900 IF EQUAL
          GOTO      KREPT000
.
KREPT900  MOVE      ZERO,EXIT
          GOTO      KREPT999
.
KREPT950  MOVE      TWO,EXIT
.
KREPT999  RETURN
.----------------------------------------------------------------------
. Keyin Year
.----------------------------------------------------------------------
KYEAR000  CALL      RINPECON
          MOVE      SIPECYR,USYEAR
          KEYIN     *PCCOL:CVERT,*V2LON,*RV,*JR,USYEAR
          PACK      USYEAR,USYEAR,SP70
.
          MATCH     SP70,USYEAR
          GOTO      KYEAR990 IF EQUAL
          PACK      KEY4,SP3,EXITCHAR * exitchar entered ?
          MATCH     KEY4,USYEAR
          GOTO      KYEAR990 IF EQUAL
.
          TYPE      USYEAR           * valid numeric ?
          GOTO      KYEAR000 IF NOT EQUAL
.
          MOVE      USYEAR,SIPEYF4
          IF        SIPEYF4<100
            SQUEEZE   USYEAR
            MOVE      USYEAR,FORM2
            PACK      USYEAR,CCC,FORM2,SP70
          ENDIF
.
          REP       " 0",USYEAR
          MOVE      ZERO,EXIT                    * entry ok
          GOTO      KYEAR999
.
KYEAR990  MOVE      TWO,EXIT                     * quit screen
.
KYEAR999  RETURN
.----------------------------------------------------------------------
. Keyin period
.----------------------------------------------------------------------
KPERD000  KEYIN     *PCCOL:CVERT,*V2LON,*RV,*ZF,*JR,USPERD
          PACK      USPERD,USPERD,SP70
          REP       " 0",USPERD
.
          PACK      KEY2,ZERO,EXITCHAR      * check for exitchar
          MATCH     KEY2,USPERD
          GOTO      KPERD950 IF EQUAL
.
          TYPE      USPERD                  * check if numeric
          GOTO      KPERD000 IF NOT EQUAL
.
          MOVE      USPERD,F2
          IF        F2>SIPENUM
            BEEP
            MOVE      "Invalid Period - ",DISPMSG
            CALL      MESSAGE1
            GOTO      KPERD000
          ENDIF
.
          PACK      KEY6,USYEAR,USPERD
          REP       " 0",KEY6
          CALL      RDSIPE1
          IF        OVRCD=1
            BEEP
            MOVE      "Period Does Not Exist - ",DISPMSG
            CALL      MESSAGE1
            GOTO      KPERD000
          ENDIF
.
.
KPERD900  MOVE      ZERO,EXIT                    * entry ok
          GOTO      KPERD999
.
KPERD950  MOVE      TWO,EXIT                     * quit screen
.
KPERD999  RETURN
.---------------------------------------------------------------------
. Enter Stock Flag (N-Nonstock S-Stock)
.---------------------------------------------------------------------
ESTCK0000  MOVE     FALSE,EXIT
           MOVE     ANSS,REPTSTCK
           KEYIN    *PCCOL:CVERT,*EL,*V2LON,*RV,REPTSTCK
           PACK     REPTSTCK,REPTSTCK,SP10
.
           MATCH    EXITCHAR,REPTSTCK
           IF       @EQUAL
             MOVE     TWO,EXIT
             GOTO     ESTCK980
           ENDIF
.
           TYPE     REPTSTCK
           GOTO     ESTCK900 IF EQUAL
           REP      UPPLOW,REPTSTCK
           MOVE     REPTSTCK,ANS
           REP      "S1N0",ANS
           TYPE     ANS
           GOTO     ESTCK900 IF NOT EQUAL
.
. -------- Valid Option
           MOVE     ANS,FORM1
           IF       FORM1=1
             MOVE     ANSS,REPTSTCK          * Only Stock
             DISPLAY  *PCCOL:CVERT,*EL,*V2LON,"Stock Only"
             MOVE     FORM1,REPTSTKF           * Report Variable
             CALL     TOFROM00               * Set cost centres
             GOTO     ESTCK950
           ENDIF
.
           IF       FORM1=0
             MOVE     ANSN,REPTSTCK          * Only Non-Stock
             DISPLAY  *PCCOL:CVERT,*EL,*V2LON,"Non-Stock Only"
             MOVE     FORM1,REPTSTKF           * Report Variable
             GOTO     ESTCK950
           ENDIF
.
ESTCK900   BEEP
           GOTO     ESTCK000
.
ESTCK950   IF       REPTSTKF=0
             MOVE     ONE,ACCEPT
             CALL     BLANK000
           ENDIF
           MOVE     ZERO,EXIT
           GOTO     ESTCK999
.
ESTCK980   MOVE     TWO,EXIT
.
ESTCK999   RETURN
.---------------------------------------------------------------------
. Set Cost Centres to display Stock
.---------------------------------------------------------------------
TOFROM00  CALL     SETSTK00
.
          IF        ACCEPT=1
            GOTO      TOFROM999
          ENDIF
.
          MOVE      SCSLITM,SAVFLDID
.
          MOVE      "    4",FLDID
          CALL      GETPOSIT
          IF        EXIT=0
            PACK      VAR,FROMCST,SP70
            CALL      DISPITEM
          ENDIF
.
          MOVE      "    5",FLDID
          CALL      GETPOSIT
          IF        EXIT=0
            PACK      VAR,TOCST,SP70
            CALL      DISPITEM
          ENDIF
.
          MOVE      SAVFLDID,FLDID
          CALL      GETPOSIT
.
TOFROM99  RETURN
.---------------------------------------------------------------------
. Set Variables for Stock
.---------------------------------------------------------------------
SETSTK00  MOVE     "Stock Replenishment           ",FROMCST
          MOVE     "Stock Replenishment           ",TOCST
          MOVE     "Stock Replenishment           ",PDESC1
          MOVE     "Stock Replenishment           ",PDESC2
          MOVE     "Stock",STRCST
          MOVE     "Stock",ENDCST
.
SETSTK99  RETURN
.---------------------------------------------------------------------
. Set Cost Centres to display Blank
.---------------------------------------------------------------------
BLANK000  UNPACK    SP70,STRCST,ENDCST
          MOVE      SP70,FROMCST
          MOVE      SP70,PDESC1
          MOVE      SP70,TOCST
          MOVE      SP70,PDESC2
.
          MOVE      SCSLITM,SAVFLDID
          MOVE      "    4",FLDID
          CALL      GETPOSIT
          IF        EXIT=0
            PACK      VAR,FROMCST,SP70
            CALL      DISPITEM
          ENDIF
.
          MOVE      "    5",FLDID
          CALL      GETPOSIT
          IF        EXIT=0
            PACK      VAR,TOCST,SP70
            CALL      DISPITEM
          ENDIF
.
          MOVE      SAVFLDID,FLDID
          CALL      GETPOSIT
.
BLANK999  RETURN
.
