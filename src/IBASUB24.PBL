. PRNT - print report                               Called by ML
.         Requires : FROMCST,TOCST   (print range display labels)
.                    STRCST,ENDCST   (print range)
.                    OPTIONA         (report type)
.********************************************************************
PRNT0000  MOVE      TRUE,FIRSTHRU
          MOVE      FALSE,NOTEMPTY
.
          DISPLAY   *P1:24,"Printing :   ";
          CALL      MAKEXP00                     * create export file
.
          MOVE      ZERO,CPAGENO                 * reset page no.
          CLOCK     TIME,CTIMEIS                 * get current time
          MOVE      "999",CLNO                   * init last line number
          MOVE      ZERO,ATOTAL02                * Overall Report Total
.
          IF        REPTSTKF=1
            MOVE      "Stock",SICACODE
            MOVE      "Stock Replenishment",SICADESC
            CALL      PDET0000
            GOTO      PRNT8000
          ENDIF
.
          CALL      FILE0000                    * go to correct position in file
.
PRNT1000  CALL      NREC0000                     * get next record
          BRANCH    OVRCD,PRNT8000               * end of file ?
.
          DISPLAY   *P12:24,*V2LON,SICACODE,*EL;
.
          CALL      PDET0000                     * Print Detail for Cost Centre
          GOTO      PRNT1000                     * get next record
.
PRNT8000  COMPARE   ZERO,CPAGENO
          CALL      HEAD0000 IF EQUAL          * print header if nothing printed
          CALL      PEND0000                     * print totals
          PRINT     "****   End of Report   ****"
.
          CALL      TRAN0000
.
PRNT9000  MOVE      ZERO,EXIT                    * exit screen
          GOTO      PRNT9999
.
PRNT9500  MOVE      ONE,EXIT                     * continue
.
PRNT9999  RETURN
.**********************************************************************
.  PDET - Print the main detail for the report         Called By PRNT
.**********************************************************************
PDET0000  MATCH     "F",REPTYPE                  * Is this the Full report?
          IF        @EQUAL
            MOVE      TRUE,NEWCOSTC
            CALL      GPOI0000                     * Get Outstanding PO Items
            CALL      CEND0000                     * Totals for cost centre
          ELSE
            CALL      GPOT0000                     * Get Outstanding PO Totals
            CALL      WSUM0000                     * print Summary Details
          ENDIF
.
PDET9999  RETURN
.**********************************************************************
.  GPOT - Get Outstanding Purchase Order Totals        Called By PRNT
.**********************************************************************
GPOT0000  MOVE      ZERO,ATOTAL01
          PACK      DAT6,USYEAR,USPERD
          PACK      KEY21,SICACODE,DAT6,SP70
          CALL      RSSIPC2
GPOT1000  CALL      RKSIPC2
          BRANCH    OVRCD,GPOT9999
.
          PACK      KEY11,SIPCCST,SIPCDAT
          MATCH     KEY11,KEY21
          GOTO      GPOT9999 IF NOT EQUAL
.
          PACK      KEY7,SIPCPON,SP70
          CALL      RDSIPA1
          BRANCH    OVRCD,GPOT1000
.
          MATCH     SP8,SIPADCN
          GOTO      GPOT1000 IF NOT EQUAL
.
          BRANCH    REPCOMPL,GPOT2000
.
          MATCH     SP8,SIPADCM
          GOTO      GPOT1000 IF NOT EQUAL
.
GPOT2000  MOVE      ONE,SIFACTOR
          MATCH     SIPCCAT,SP70
          IF        !@EQUAL
            PACK      KEY7,SIPCCAT
            CALL      RDSIIA1
            IF        OVRCD=0
              PACK      KEY30,SIIAISS,SIPCSUT
              CALL      RDSIFA1
            ENDIF
          ENDIF
.
          ASSIGN    ATOTAL01+(SIPCOQT-(SIPCRQT/SIFACTOR))*SIPCECT,ATOTAL01
          GOTO      GPOT1000
.
GPOT9999  RETURN
.**********************************************************************
.  GPOI - Get Outstanding Purchase Order Totals        Called By PRNT
.**********************************************************************
GPOI0000  MOVE      ZERO,ATOTAL01
          MOVE      FALSE,NOTEMPCC
          PACK      DAT6,USYEAR,USPERD
          PACK      KEY21,SICACODE,DAT6,SP70
          CALL      RSSIPC2
GPOI1000  CALL      RKSIPC2
          BRANCH    OVRCD,GPOI9999
.
          MATCH     SICACODE,SIPCCST         * Check same cost centre
          GOTO      GPOI9999 IF NOT EQUAL
.
          MATCH     DAT6,SIPCDAT             * Check same period
          GOTO      GPOI9999 IF NOT EQUAL
.
          PACK      KEY7,SIPCPON,SP70
          CALL      RDSIPA1
          BRANCH    OVRCD,GPOI1000
.
          MATCH     SP8,SIPADCN
          GOTO      GPOI1000 IF NOT EQUAL
.
          BRANCH    REPCOMPL,GPOI2000
.
          MATCH     SP8,SIPADCM
          GOTO      GPOI1000 IF NOT EQUAL
.
GPOI2000  MOVE      ONE,SIFACTOR
          MATCH     SIPCCAT,SP70
          IF        !@EQUAL
            PACK      KEY7,SIPCCAT
            CALL      RDSIIA1
            IF        OVRCD=0
              PACK      KEY30,SIIAISS,SIPCSUT
              CALL      RDSIFA1
            ENDIF
          ENDIF
.
          ASSIGN    ATOTAL01+(SIPCOQT-(SIPCRQT/SIFACTOR))*SIPCECT,ATOTAL01
          IF        SIPCOQT>(SIPCRQT/SIFACTOR)
            CALL      WFUL0000               * Write the detail record
          ENDIF
.
          GOTO      GPOI1000
.
GPOI9999  RETURN
