.   Program       : GENERKIC
.   TSK Number    : 0816724
.   Modifications : 
.        V11.03.00  01/02/2023  Sunny         TSK 0816724
.                   New Program - Insurance Table Keyword generator
.----------------------------------------------------------------------
.
.----------------------------------------------------------------------
.  data includes
.----------------------------------------------------------------------
.
          INC       STDGENDF
          INC       PATCODFD/INC
          INC       PATIN1FD/INC
          INC       PATKICFD/INC
.
.----------------------------------------------------------------------
.  local variables
.----------------------------------------------------------------------
.
.
PRGID     INIT      "GENERKIC"
PRGNAM    INIT      "Fix patkicaf"
VERSION   INIT      "V12.00.00"
.
.----------------------------------------------------------------------
.  program code
.----------------------------------------------------------------------
.
.---- initialise screen and confirm desire to execute program ----
.
ML0000    CALL      DISPHEAD
.
          DISPLAY   *P1:10,"Program generates Insurance Company Keywords"
          CALL      CONTQST
          SUB       ONE,CEXIT
          BRANCH    CEXIT,ML9999,ML9999
.
.---- open files ----
.
          OPEN      PATCODE1,"patcodes"
          OPEN      PATIN1A1,"patin1af"
          OPEN      PATKICA1,"patkicaf"
          OPEN      PATKICA2,"patkicaf"
.
.---- loop through pateoraf ----
.
          MOVE      ZERO,SECTOR
.
          PACK      KEY6,SP70
ML1000    CALL      RDSINSR1           * read next record
ML1100    CALL      RDKINSR1
          BRANCH    OVRCD,ML9999
.
          ADD       ONE,SECTOR
          IF        SECTOR%100=1
            DISPLAY   *P1:24,*V2LON,SECTOR," - ",ICODE,*EF;
          ENDIF
.
          PROC      PATKIOUP
          GOTO      ML1100
.
.---- exit program ----
.
ML9999    CHAIN     PGM
.----------------------------------------------------------------------
.  code includes
.----------------------------------------------------------------------
.
          INC       PATCODIO/INC
          INC       PATIN1IO/INC
          INC       PATKICIO/INC
          INC       PATKIOPR
          INC       STDGENCD
.
