.
.       WATDSSTA : Display Status plus description        WAITING LISTS
.
.       This include is used to display status and descriptions 
.
.
WATDSSTA  MOVE       FIVE,VERT
          MOVE       ONE,COL
          DISPLAY    *P1:3,*EF,*P30:4,*V2LON,*ULON,"STATUS"
          MOVE       ONE,COUNT
          PACK       STATUS WITH SP20
.
STA100    LOAD       STATUS USING COUNT OF STAT1,STAT2,STAT3,STAT4,STAT5,STAT6
          DISPLAY    *PCOL:VERT,*V2LON,COUNT,SP2,*HOFF,STATUS
.
          ADD        ONE,VERT
          ADD        ONE,COUNT
          COMPARE    SEVEN,COUNT
          GOTO       STA199 IF NOT LESS
          COMPARE    "24",VERT
          GOTO       STA100 IF LESS
.
          MOVE       FIVE,VERT
          ADD        "40",COL                    * two columns of status
          COMPARE    "70",COL
          GOTO       STA100 IF LESS
.
          KEYIN     *P1:24,*EL," (",*V2LON,"E",*HOFF,")xit, (":
                    *V2LON,"N",*HOFF,")ext Screen : ",*V2LON,ANS;
          MATCH     ANSE,ANS
          RETURN    IF EQUAL
.
          MOVE      FIVE,VERT
          MOVE      ONE,COL
          DISPLAY   *P1:5,*EF
          GOTO      STA100
.
.         End of status
.
STA199    KEYIN     *P1:24,*EL,"End of search, Hit ",*V2LON,"<RETURN>",*HOFF:
                               " to continue ",*EOFF,ANS;
          MOVE       ZERO,COUNT
          PACK       STATUS WITH SP20
          RETURN
