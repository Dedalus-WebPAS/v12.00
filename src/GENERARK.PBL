.----------------------------------------------------------------------
.  data includes
.----------------------------------------------------------------------
.
          INC       STDGENDF
          INC       ALLPROFD/INC
          INC       ALLRKIFD/INC
.
.----------------------------------------------------------------------
.  local variables
.----------------------------------------------------------------------
.
.
PRGID     INIT      "GENERARK"
PRGNAM    INIT      "Fix allrkiaf"
VERSION   INIT      "V12.00.00"
.
.----------------------------------------------------------------------
.  program code
.----------------------------------------------------------------------
.
.---- initialise screen and confirm desire to execute program ----
.
ML0000    CALL      DISPHEAD
.
          DISPLAY   *P1:10,"Generate A/H Procedure Keyword records."
          CALL      CONTQST
          SUB       ONE,CEXIT
          BRANCH    CEXIT,ML9999,ML9999
.
.---- open files ----
.
          OPEN      ALLPROA1,"allproaf"
          OPEN      ALLRKIA1,"allrkiaf"
          OPEN      ALLRKIA2,"allrkiaf"
.
.---- loop through allproaf ----
.
          MOVE      ZERO,SECTOR
.
          PACK      KEY12,SP70
ML1000    CALL      RSALPRO1           * read next record
ML1100    CALL      RKALPRO1
          BRANCH    OVRCD,ML9999
.
          ADD       ONE,SECTOR
          IF        SECTOR%100=1
            DISPLAY   *P1:24,*V2LON,SECTOR," - ",ALPOPROC,*EF;
          ENDIF
.
          PROC      ALLARKUP
          GOTO      ML1100
.
.---- exit program ----
.
ML9999    CHAIN     PGM
.----------------------------------------------------------------------
.  code includes
.----------------------------------------------------------------------
.
          INC       ALLPROIO/INC
          INC       ALLRKIIO/INC
          INC       ALLADRPR
          INC       STDGENCD
.
